#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "Preparing database..."
  ./bin/rails db:prepare || {
    echo "Warning: db:prepare failed, trying db:migrate..."
    ./bin/rails db:migrate || echo "Warning: db:migrate also failed, continuing anyway..."
  }
  
  # ⚠️  IMPORTANT : Préparer la queue SQLite AVANT que Solid Queue démarre
  #    - Solid Queue s'arrête si les tables SQLite n'existent pas
  #    - On doit créer/migrer la queue SQLite avant le démarrage du serveur
  #    - Cela évite que le conteneur crash au démarrage
  echo "=========================================="
  echo "Preparing SQLite queue database (Solid Queue)..."
  echo "=========================================="
  
  # S'assurer que le répertoire storage existe
  echo "Creating storage directory..."
  mkdir -p storage 2>/dev/null || {
    echo "ERROR: Failed to create storage directory"
    exit 1
  }
  echo "✅ Storage directory created: $(pwd)/storage"
  ls -la storage/ 2>/dev/null || echo "Storage directory is empty"
  
  # Vérifier que database.yml contient la configuration queue
  echo "Checking database.yml configuration..."
  if grep -q "queue:" config/database.yml 2>/dev/null; then
    echo "✅ Queue database configuration found in database.yml"
  else
    echo "⚠️  WARNING: Queue database configuration NOT found in database.yml"
    echo "   Solid Queue may fail to start!"
  fi
  
  # Migrer la queue SQLite (non bloquant si pas encore configurée)
  echo "Running db:migrate:queue..."
  MIGRATE_OUTPUT=$(./bin/rails db:migrate:queue 2>&1)
  MIGRATE_EXIT_CODE=$?
  
  if [ $MIGRATE_EXIT_CODE -eq 0 ]; then
    echo "✅ SQLite queue migrations applied successfully"
    echo "$MIGRATE_OUTPUT" | tail -5
  else
    echo "❌ ERROR: db:migrate:queue failed with exit code: $MIGRATE_EXIT_CODE"
    echo "Output:"
    echo "$MIGRATE_OUTPUT"
    echo ""
    echo "⚠️  Attempting to create database schema directly..."
    
    # Essayer de créer le schéma directement si les migrations échouent
    if [ -f "db/queue_schema.rb" ]; then
      echo "Found queue_schema.rb, loading schema..."
      if ./bin/rails db:schema:load:queue 2>&1; then
        echo "✅ Schema loaded successfully"
      else
        echo "❌ Schema load also failed"
      fi
    fi
  fi
  
  # Vérifier que le fichier SQLite existe
  SQLITE_FILE="storage/solid_queue.sqlite3"
  if [ "${RAILS_ENV}" = "test" ]; then
    SQLITE_FILE="storage/solid_queue_test.sqlite3"
  fi
  
  if [ -f "$SQLITE_FILE" ]; then
    echo "✅ SQLite queue database file exists: $SQLITE_FILE"
    ls -lh "$SQLITE_FILE"
    
    # Vérifier que le fichier n'est pas vide
    if [ ! -s "$SQLITE_FILE" ]; then
      echo "⚠️  WARNING: SQLite file exists but is empty!"
    fi
  else
    echo "❌ ERROR: SQLite queue database file NOT found: $SQLITE_FILE"
    echo "   Expected file: $SQLITE_FILE"
    echo "   Files in storage/:"
    ls -la storage/ 2>/dev/null || echo "   (storage directory is empty)"
    echo ""
    echo "⚠️  Solid Queue will likely crash on startup!"
  fi
  echo "=========================================="
fi

# Force CSS rebuild in development environment on startup
# This ensures CSS is up-to-date after git pull
# Note: This runs AFTER volume mount, so it compiles CSS in the mounted directory
if [ "${RAILS_ENV}" == "development" ] && [ -f "package.json" ]; then
  echo "Preparing development environment..."
  
  # Check if gems need to be updated (when Gemfile.lock changes after rebuild or git pull)
  # This solves the issue where volume bundle persists old gems even after image rebuild
  if [ -f "Gemfile.lock" ]; then
    GEMFILE_LOCK_CHECKSUM=$(md5sum Gemfile.lock | cut -d' ' -f1)
    BUNDLE_CHECKSUM_FILE="${BUNDLE_PATH:-/rails/vendor/bundle}/.gemfile_lock_checksum"
    
    if [ ! -f "$BUNDLE_CHECKSUM_FILE" ] || [ "$(cat "$BUNDLE_CHECKSUM_FILE" 2>/dev/null)" != "$GEMFILE_LOCK_CHECKSUM" ]; then
      echo "Gemfile.lock has changed or gems are missing. Installing/updating gems..."
      bundle install || echo "Warning: bundle install failed, continuing anyway..."
      echo "$GEMFILE_LOCK_CHECKSUM" > "$BUNDLE_CHECKSUM_FILE"
      echo "Gems updated successfully."
    else
      echo "Gems are up-to-date."
    fi
  fi
  
  # Install node_modules if they don't exist (first run or volume is empty)
  if [ ! -d "node_modules" ] || [ -z "$(ls -A node_modules 2>/dev/null)" ]; then
    echo "Installing node_modules (this may take a moment on first run)..."
    PATH="/usr/local/node/bin:$PATH" npm install || echo "Warning: npm install failed, continuing anyway..."
  fi
  
  echo "Rebuilding CSS to ensure latest changes are applied..."
  # Ensure builds directory exists
  mkdir -p app/assets/builds/fonts
  # Build CSS (application + ActiveAdmin) with proper SASS_PATH and npm path
  ACTIVEADMIN_STYLES_PATH=$(bundle exec ruby -e 'spec = Gem.loaded_specs["activeadmin"]; print spec&.full_gem_path ? spec.full_gem_path + "/app/assets/stylesheets" : ""')
  if [ -n "$ACTIVEADMIN_STYLES_PATH" ]; then
    export SASS_PATH="node_modules:${ACTIVEADMIN_STYLES_PATH}"
  else
    echo "Warning: Could not resolve ActiveAdmin styles path, fallback to node_modules only."
    export SASS_PATH="node_modules"
  fi
  PATH="/usr/local/node/bin:$PATH" npm run build:css || echo "Warning: CSS rebuild failed, continuing anyway..."
  
  # Vérifier que les fonts sont bien copiées
  if [ ! -f "app/assets/builds/fonts/bootstrap-icons.woff2" ]; then
    echo "Warning: Bootstrap Icons fonts not found, attempting to copy manually..."
    mkdir -p app/assets/builds/fonts
    cp -r node_modules/bootstrap-icons/font/fonts/*.woff* app/assets/builds/fonts/ 2>/dev/null || echo "Warning: Could not copy Bootstrap Icons fonts"
  fi
fi

# Lancer Supercronic en arrière-plan pour les tâches cron en production/staging
if [ "${RAILS_ENV}" == "production" ] || [ "${APP_ENV}" == "staging" ] || [ "${DEPLOY_ENV}" == "staging" ] || [ "${DEPLOY_ENV}" == "production" ]; then
  if [ -f "/rails/config/crontab" ]; then
    echo "Starting Supercronic for cron jobs..."
    # Créer le répertoire log s'il n'existe pas et s'assurer des permissions
    mkdir -p /rails/log
    touch /rails/log/cron.log 2>/dev/null || true
    # Lancer Supercronic en arrière-plan avec le fichier crontab
    # Les logs de Supercronic vont vers stdout/stderr, les logs des tâches vers log/cron.log
    supercronic /rails/config/crontab &
    SUPERICRONIC_PID=$!
    echo "Supercronic started in background (PID: $SUPERICRONIC_PID)"
  else
    echo "Warning: /rails/config/crontab not found, skipping cron jobs"
  fi
fi

exec "${@}"
