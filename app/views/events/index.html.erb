<% content_for :title, 'Événements Grenoble Roller' %>

<section class="banner-page mb-4">
  <div class="banner-overlay"></div>
  <div class="banner-content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <i class="bi bi-calendar-event banner-icon-small mb-2" aria-hidden="true"></i>
          <h1 class="banner-title-page mb-3">Nos Événements</h1>
          <p class="banner-subtitle-page mb-4">
            Découvrez toutes nos sorties roller
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container pb-5">
  <% if @highlighted_event.present? %>
    <div class="mb-5">
      <div class="d-flex align-items-center gap-2 mb-3">
        <i class="bi bi-star-fill text-warning fs-5"></i>
        <h2 class="h3 fw-bold mb-0">Prochain rendez-vous</h2>
      </div>
      <div class="col-12 col-lg-10 col-xl-8 mx-auto">
        <article class="card card-event card-event-featured card-liquid rounded-liquid shadow-liquid overflow-hidden">
          <div class="card-event-image card-event-image-featured">
            <%= image_tag(event_cover_image_url(@highlighted_event),
                          alt: @highlighted_event.title,
                          loading: 'lazy',
                          class: 'w-100 h-100 object-fit-cover') %>
            <span class="card-event-date badge badge-liquid-success">
              <i class="bi bi-calendar3 me-1"></i>
              <%= l @highlighted_event.start_at, format: :day_month, locale: :fr %>
            </span>
          </div>

          <div class="card-body p-3 p-md-4 p-lg-5 d-flex flex-column">
            <!-- Titre (hiérarchie visuelle claire) -->
            <h2 class="card-title h2 fw-bold mb-3">
              <%= link_to @highlighted_event.title, event_path(@highlighted_event), class: 'text-decoration-none text-body' %>
            </h2>

            <!-- Informations essentielles (scannables, alignées avec la card) -->
            <div class="card-event-info mb-3 text-body-secondary">
              <p class="mb-2">
                <i class="bi bi-calendar-week text-liquid-primary me-2"></i>
                <%= l @highlighted_event.start_at, format: :event_long, locale: :fr %>
              </p>
              <p class="mb-2">
                <i class="bi bi-geo-alt text-liquid-primary me-2"></i>
                <%= @highlighted_event.location_text %>
              </p>
              <p class="mb-2">
                <i class="bi bi-signpost-2 text-liquid-primary me-2"></i>
                <%= number_with_precision(@highlighted_event.distance_km, precision: 1, strip_insignificant_zeros: true) %> km
              </p>
              <p class="mb-0">
                <i class="bi bi-clock text-liquid-primary me-2"></i>
                <%= @highlighted_event.duration_min %> min
              </p>
            </div>

            <!-- Description (concis, max 120 caractères pour hero) -->
            <p class="text-muted mb-3"><%= truncate(@highlighted_event.description, length: 120, omission: '...') %></p>

            <!-- Badges d'inscription (groupés, visibilité claire) -->
            <div class="d-flex flex-wrap gap-2 mb-4">
              <!-- Badge Annulé (prioritaire, haute visibilité) -->
              <% if @highlighted_event.canceled? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-octagon me-1"></i>Annulé
                </span>
              <% end %>
              
              <span class="badge bg-primary">
                <i class="bi bi-people-fill me-1"></i>
                <%= pluralize(@highlighted_event.attendances_count, "inscrit") %>
              </span>
              
              <% unless @highlighted_event.unlimited? %>
                <% if @highlighted_event.full? %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1"></i>Complet
                  </span>
                <% else %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle me-1"></i><%= pluralize(@highlighted_event.remaining_spots, "place disponible") %>
                  </span>
                <% end %>
              <% else %>
                <span class="badge bg-info">
                  <i class="bi bi-infinity me-1"></i>Illimité
                </span>
              <% end %>
              
              <% if user_signed_in? && current_user_has_attendance?(@highlighted_event) %>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle me-1"></i>Vous êtes inscrit(e)
                </span>
              <% end %>
            </div>

            <!-- Actions avec hiérarchie claire -->
            <div class="event-actions mt-auto">
              <!-- Bouton primaire séparé et proéminent -->
              <% if current_user_has_attendance?(@highlighted_event) %>
                <div class="d-grid mb-3">
                  <%= button_to cancel_attendance_event_path(@highlighted_event), method: :delete, 
                      class: 'btn btn-outline-secondary btn-lg', 
                      data: { turbo_confirm: 'Annuler votre inscription ?' },
                      aria: { label: 'Se désinscrire de cet événement' } do %>
                    <i class="bi bi-calendar-x me-2"></i>Se désinscrire
                  <% end %>
                </div>
              <% elsif policy(@highlighted_event).can_attend? && !@highlighted_event.full? %>
                <div class="d-grid mb-3">
                  <button type="button" 
                          class="btn btn-liquid-primary btn-lg" 
                          data-bs-toggle="modal" 
                          data-bs-target="#confirmAttendModalIndex"
                          aria-label="S'inscrire à cet événement">
                    <i class="bi bi-calendar-plus me-2"></i>S'inscrire maintenant
                  </button>
                </div>
              <% elsif @highlighted_event.full? %>
                <div class="d-grid mb-3">
                  <button type="button" class="btn btn-outline-secondary btn-lg" disabled aria-label="Événement complet">
                    <i class="bi bi-x-circle me-2"></i>Complet
                  </button>
                </div>
              <% end %>

              <!-- Boutons secondaires groupés -->
              <div class="d-flex flex-wrap gap-2">
                <% if user_signed_in? %>
                  <%= link_to ical_event_path(@highlighted_event, format: :ics), 
                      class: 'btn btn-outline-primary', 
                      title: 'Télécharger le fichier .ics pour l\'ajouter à votre calendrier', 
                      data: { bs_toggle: 'tooltip', bs_placement: 'top' },
                      aria: { label: 'Ajouter au calendrier' } do %>
                    <i class="bi bi-calendar-event me-2"></i>Calendrier
                  <% end %>
                <% else %>
                  <%= link_to new_user_session_path, 
                      class: 'btn btn-outline-primary',
                      aria: { label: 'Se connecter pour accéder aux fonctionnalités' } do %>
                    <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                  <% end %>
                <% end %>

                <%= link_to event_path(@highlighted_event), 
                    class: 'btn btn-outline-secondary',
                    aria: { label: 'Voir les détails de cet événement' } do %>
                  <i class="bi bi-eye me-2"></i>Voir plus
                <% end %>

                <% if policy(@highlighted_event).edit? %>
                  <%= link_to edit_event_path(@highlighted_event), 
                      class: 'btn btn-link text-decoration-none',
                      aria: { label: 'Modifier cet événement' } do %>
                    <i class="bi bi-pencil-square me-1"></i>Modifier
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </article>
      </div>

      <% if policy(@highlighted_event).can_attend? && !is_full %>
        <!-- Modal de confirmation d'inscription -->
        <div class="modal fade" id="confirmAttendModalIndex" tabindex="-1" aria-labelledby="confirmAttendModalIndexLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="confirmAttendModalIndexLabel">
                  <i class="bi bi-calendar-check me-2"></i>Confirmer votre inscription
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
              </div>
              <%= form_with url: attend_event_path(@highlighted_event), method: :post, data: { turbo: false } do |f| %>
                <div class="modal-body">
                  <p class="lead mb-3">
                    Confirmez votre participation à <strong><%= @highlighted_event.title %></strong>
                  </p>
                  
                  <div class="form-check mb-3">
                    <%= f.check_box :wants_reminder, { checked: true, class: 'form-check-input' }, '1', '0' %>
                    <label class="form-check-label" for="wants_reminder">
                      <i class="bi bi-bell me-1"></i>
                      Recevoir un rappel par email la veille à 19h
                    </label>
                  </div>
                  
                  <p class="mb-0 text-muted small">
                    <i class="bi bi-info-circle me-1"></i>
                    Vous recevrez une confirmation par email et pourrez annuler votre inscription à tout moment.
                  </p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                  <%= f.submit "Confirmer l'inscription", class: "btn btn-liquid-primary", data: { bs_dismiss: "modal" } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div id="events-upcoming" class="mb-5">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3">
      <div>
        <h2 class="h2 fw-bold mb-1"><i class="bi bi-stars me-2"></i>À venir</h2>
        <p class="text-body-secondary mb-0">
          Les prochains rendez-vous roller ouverts à la communauté.
        </p>
      </div>
      <span class="badge badge-liquid-primary fs-6"><%= @upcoming_events.size %> événements</span>
    </div>

    <% if @upcoming_events.any? %>
      <div class="event-grid">
        <div class="row g-4">
          <% @upcoming_events.each do |event| %>
            <%= render 'events/event_card',
                       event: event,
                       render_signup_button: true,
                       current_user: current_user %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info border-0 shadow-sm">
        <i class="bi bi-info-circle me-2"></i>Aucun événement planifié pour le moment — une annonce arrive bientôt !
      </div>
    <% end %>
  </div>

  <div>
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3">
      <div>
        <h2 class="h2 fw-bold mb-1"><i class="bi bi-archive me-2"></i>Événements passés</h2>
        <p class="text-body-secondary mb-0">
          Un aperçu des dernières sorties et initiations organisées.
        </p>
      </div>
    </div>

    <% if @past_events.any? %>
      <div class="event-grid">
        <div class="row g-4">
          <% @past_events.each do |event| %>
            <%= render 'events/event_card',
                       event: event,
                       render_signup_button: false,
                       current_user: current_user,
                       past: true %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-secondary border-0 shadow-sm">
        Les événements passés apparaîtront ici prochainement.
      </div>
    <% end %>
  </div>
</section>

