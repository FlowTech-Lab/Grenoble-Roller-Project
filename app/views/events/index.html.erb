<% content_for :title, 'Événements Grenoble Roller' %>

<section class="container py-4 py-lg-5">
  <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="display-5 fw-semibold mb-0">Événements</h1>
      <p class="text-body-secondary mb-0">
        Retrouvez toutes les sorties roller, initiations et moments forts de la communauté.
      </p>
    </div>
    <% if policy(Event).new? %>
      <%= link_to 'Créer un événement', new_event_path, class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>

  <% if @highlighted_event.present? %>
    <div class="card border-0 shadow-sm mb-5 overflow-hidden">
      <div class="row g-0 align-items-center">
        <div class="col-lg-7">
          <div class="card-body p-4 p-lg-5">
            <span class="badge bg-success-subtle text-success-emphasis text-uppercase mb-3">
              Prochain rendez-vous
            </span>
            <h2 class="card-title h1 fw-bold"><%= @highlighted_event.title %></h2>
            <p class="card-text text-body-secondary">
              <i class="bi bi-calendar-week me-2"></i>
              <%= l @highlighted_event.start_at, format: :long %>
              &nbsp;•&nbsp;
              <i class="bi bi-clock me-2"></i>
              <%= number_with_precision(@highlighted_event.duration_min / 60.0, precision: 1) %> h
            </p>
            <p class="card-text lead"><%= truncate(@highlighted_event.description, length: 220) %></p>
            <div class="d-flex gap-3">
              <%= link_to 'Voir le détail', event_path(@highlighted_event), class: 'btn btn-liquid-primary' %>
              <% if policy(@highlighted_event).edit? %>
                <%= link_to 'Modifier', edit_event_path(@highlighted_event), class: 'btn btn-outline-primary' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-5 d-none d-lg-block">
          <div class="ratio ratio-4x3 bg-cover" style="background-image: url('<%= @highlighted_event.cover_image_url.presence || image_path('logo/logo_grenobleroller_color.png') %>');">
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="mb-5">
    <div class="d-flex align-items-center gap-3 mb-3">
      <h2 class="h3 mb-0">À venir</h2>
      <span class="badge rounded-pill text-bg-primary"><%= @upcoming_events.size %></span>
    </div>
    <div class="row g-4">
      <% if @upcoming_events.any? %>
        <%= render partial: 'event_card', collection: @upcoming_events, as: :event %>
      <% else %>
        <div class="col-12">
          <div class="alert alert-info mb-0">
            Aucun événement planifié pour le moment. Restez connectés !
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class="d-flex align-items-center gap-3 mb-3">
      <h2 class="h3 mb-0">Événements passés</h2>
    </div>
    <div class="row g-4">
      <% if @past_events.any? %>
        <%= render partial: 'event_card', collection: @past_events, as: :event, locals: { past: true } %>
      <% else %>
        <div class="col-12">
          <div class="alert alert-secondary mb-0">
            Les événements passés apparaîtront ici.
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

