<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <div class="card card-liquid rounded-liquid shadow-liquid auth-form auth-form--wide">
      <div class="card-body p-4 p-lg-5">
        <div class="text-center mb-4">
          <i class="bi bi-calendar-event fs-1 text-liquid-primary"></i>
          <h3 class="mt-2"><%= event.persisted? ? 'Modifier l’événement' : 'Créer un événement' %></h3>
          <p class="text-muted small">
            Complétez les informations nécessaires pour publier votre sortie.
          </p>
        </div>

        <% if event.errors.any? %>
          <div class="alert alert-liquid-danger rounded-liquid mb-4">
            <h4 class="h6 fw-semibold mb-2">
              <%= pluralize(event.errors.count, "erreur") %> empêchent l’enregistrement :
            </h4>
            <ul class="mb-0 small">
              <% event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: event, html: { class: 'row g-3', multipart: true, data: { controller: 'event-form' } }) do |f| %>
          <div class="col-12">
            <%= f.label :title, "Titre", class: "form-label" %>
            <%= f.text_field :title, class: "form-control form-control-liquid", required: true, maxlength: 140, placeholder: "Sortie nocturne Grenoble", onblur: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>

          <!-- Le statut n'est pas modifiable par l'organisateur, seulement par les modérateurs dans Active Admin -->
          <% if can_moderate? %>
            <div class="col-12 col-md-6">
              <%= f.label :status, "Statut", class: "form-label" %>
              <%= f.select :status, 
                  Event.statuses.keys.map { |status| 
                    label = case status
                            when 'draft' then 'En attente de validation'
                            when 'published' then 'Publié'
                            when 'rejected' then 'Refusé'
                            when 'canceled' then 'Annulé'
                            else status.humanize
                            end
                    [label, status]
                  }, 
                  {}, 
                  class: "form-select form-select-liquid" %>
            </div>
          <% else %>
            <%= f.hidden_field :status, value: 'draft' %>
            <div class="col-12">
              <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>En attente de validation</strong> : Votre événement sera soumis à validation par un modérateur avant d'être publié.
              </div>
            </div>
          <% end %>

          <div class="col-12 col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <%= f.label :route_id, "Parcours associé", class: "form-label mb-0" %>
              <% if current_user&.role&.level.to_i >= 60 %>
                <button type="button" 
                        class="btn btn-sm btn-outline-primary" 
                        data-bs-toggle="modal" 
                        data-bs-target="#createRouteModal"
                        data-event-form-target="createRouteButton">
                  <i class="bi bi-plus-circle me-1"></i>Créer un parcours
                </button>
              <% end %>
            </div>
            <%= f.collection_select :route_id, @routes, :id, :name, { include_blank: "Sans parcours" }, 
                class: "form-select form-select-liquid",
                data: { 
                  event_form_target: "routeSelect",
                  action: "change->event-form#routeChanged" 
                } %>
          </div>
          
          <!-- Nombre de boucles -->
          <div class="col-12 col-md-6">
            <%= f.label :loops_count, "Nombre de boucles", class: "form-label" %>
            <%= f.number_field :loops_count, 
                class: "form-control form-control-liquid", 
                min: 1, 
                max: 10, 
                step: 1, 
                value: event.loops_count || 1,
                data: { 
                  event_form_target: "loopsCountInput",
                  action: "change->event-form#loopsCountChanged input->event-form#loopsCountChanged"
                } %>
          </div>

          <!-- Parcours par boucle supplémentaire (affiché dynamiquement si loops_count > 1) -->
          <div class="col-12" id="loop-routes-container" style="display: none;">
            <div class="card card-liquid border-liquid mb-3">
              <div class="card-header bg-liquid-light">
                <h6 class="mb-0">
                  <i class="bi bi-signpost-2 me-2"></i>Parcours pour les boucles supplémentaires
                </h6>
              </div>
              <div class="card-body" id="loop-routes-fields">
                <p class="text-muted small mb-3">
                  <i class="bi bi-info-circle me-1"></i>
                  La <strong>boucle 1</strong> utilise le parcours principal sélectionné ci-dessus. Configurez ici les parcours pour les boucles 2, 3, etc.
                </p>
                <!-- Les champs seront générés dynamiquement par JavaScript -->
              </div>
            </div>
          </div>
          
          <!-- Niveau et distance (toujours visibles, pré-remplis si parcours sélectionné) -->
          <div class="col-12 col-md-6">
            <%= f.label :level, "Niveau", class: "form-label" do %>
              Niveau <span class="text-danger">*</span>
            <% end %>
            <%= f.select :level, 
                options_for_select([
                  ['Débutant', 'beginner'],
                  ['Intermédiaire', 'intermediate'],
                  ['Confirmé', 'advanced'],
                  ['Tous niveaux', 'all_levels']
                ], event.level),
                { include_blank: "Sélectionnez un niveau" },
                class: "form-select form-select-liquid",
                data: { event_form_target: "levelSelect" },
                required: true,
                onchange: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>
          
          <div class="col-12 col-md-6">
            <%= f.label :distance_km, "Distance par boucle (km)", class: "form-label" do %>
              Distance par boucle (km) <span class="text-danger">*</span>
            <% end %>
            <div class="input-group">
              <%= f.number_field :distance_km, 
                  class: "form-control form-control-liquid", 
                  min: 0.1, 
                  step: 0.5,
                  placeholder: "Ex: 15.5",
                  data: { 
                    event_form_target: "distanceInput",
                    action: "input->event-form#distanceChanged"
                  },
                  required: true,
                  onblur: "validateField(this)" %>
              <span class="input-group-text">km</span>
            </div>
            <small class="form-text text-muted">
              <i class="bi bi-info-circle me-1"></i>
              Utilisez les flèches pour incrémenter de 0,5 km. Vous pouvez saisir manuellement avec une précision de 0,1 km.
            </small>
            <div class="invalid-feedback"></div>
            <div id="total-distance-display" class="alert alert-info mt-2" style="display: none;">
              <i class="bi bi-calculator me-2"></i>
              <strong>Distance totale :</strong> <span id="total-distance-value">0</span> km
            </div>
          </div>

          <div class="col-12 col-md-6">
            <%= f.label :start_at, "Date et heure de début", class: "form-label" %>
            <%= f.datetime_field :start_at, class: "form-control form-control-liquid", required: true, onblur: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>

          <div class="col-12 col-md-6">
            <%= f.label :duration_min, "Durée (minutes)", class: "form-label" %>
            <%= f.number_field :duration_min, class: "form-control form-control-liquid", min: 30, step: 5, required: true, onblur: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>

          <div class="col-12 col-md-6">
            <%= f.label :max_participants, "Nombre maximum de participants", class: "form-label" %>
            <%= f.number_field :max_participants, class: "form-control form-control-liquid", min: 0, step: 1, required: true, value: event.max_participants || 0, onblur: "validateField(this)" %>
            <div class="form-text">
              <i class="bi bi-info-circle me-1"></i>
              Mettez <strong>0</strong> pour un illimité.
            </div>
            <div class="invalid-feedback"></div>
          </div>

          <div class="col-12 col-md-6">
            <%= f.label :price_euros, "Prix (€)", class: "form-label" do %>
              Prix (€) <span class="text-danger">*</span>
            <% end %>
            <div class="input-group">
              <%= number_field_tag :price_euros, 
                  (event.price_cents / 100.0 if event.price_cents.present?),
                  class: "form-control form-control-liquid", 
                  min: 0, 
                  step: 1,
                  placeholder: "Ex: 5.00",
                  required: true,
                  onblur: "validateField(this)" %>
              <span class="input-group-text">€</span>
            </div>
            <small class="form-text text-muted">
              <i class="bi bi-info-circle me-1"></i>
              Utilisez les flèches pour incrémenter de 1€. Vous pouvez saisir manuellement avec une précision de 0,01€ (centimes).
            </small>
            <div class="invalid-feedback"></div>
            <%= f.hidden_field :currency, value: "EUR" %>
          </div>

          <div class="col-12">
            <%= f.label :location_text, "Lieu / Point de rendez-vous", class: "form-label" do %>
              Lieu / Point de rendez-vous <span class="text-danger">*</span>
            <% end %>
            <%= f.text_field :location_text, 
                class: "form-control form-control-liquid", 
                maxlength: 255, 
                required: true, 
                placeholder: "Ex: Parc Paul Mistral, Grenoble",
                aria: { describedby: 'locationHelp' },
                onblur: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>

          <!-- Coordonnées GPS optionnelles (collapsed par défaut) -->
          <div class="col-12">
            <button class="btn btn-link text-decoration-none p-0" 
                    type="button" 
                    data-bs-toggle="collapse" 
                    data-bs-target="#gpsCoordinates"
                    aria-expanded="<%= event.has_gps_coordinates? ? 'true' : 'false' %>"
                    aria-controls="gpsCoordinates">
              <i class="bi bi-geo-alt me-1"></i>
              <span class="text-muted">(Optionnel) Ajouter les coordonnées GPS précises</span>
              <i class="bi bi-chevron-<%= event.has_gps_coordinates? ? 'up' : 'down' %> ms-1"></i>
            </button>
            
            <div class="collapse<%= ' show' if event.has_gps_coordinates? %> mt-2" id="gpsCoordinates">
              <div class="card card-body bg-light gps-coordinates-card">
                <p class="small text-muted mb-3">
                  <i class="bi bi-lightbulb me-1"></i>
                  <strong>Bonus:</strong> Les coordonnées GPS permettent d'afficher une carte interactive et un lien Google Maps.
                </p>
                
                <div class="row g-2">
                  <div class="col-md-6">
                    <%= f.label :meeting_lat, "Latitude", class: "form-label small" %>
                    <%= f.number_field :meeting_lat, 
                        class: "form-control form-control-sm", 
                        step: "any",
                        placeholder: "45.1885" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :meeting_lng, "Longitude", class: "form-label small" %>
                    <%= f.number_field :meeting_lng, 
                        class: "form-control form-control-sm", 
                        step: "any",
                        placeholder: "5.7245" %>
                  </div>
                </div>
                
                <div class="mt-2">
                  <a href="https://www.google.com/maps" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-map me-1"></i>
                    Trouver les coordonnées sur Google Maps
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12">
            <%= f.label :cover_image, "Image de couverture", class: "form-label" %>
            <% if event.persisted? && event.cover_image.attached? %>
              <div class="mb-2">
                <%= image_tag rails_representation_path(event.cover_image_thumb), class: "img-thumbnail", style: "max-height: 200px;" %>
                <div class="form-text">
                  <i class="bi bi-check-circle text-success me-1"></i>Image actuelle (optimisée)
                </div>
              </div>
            <% end %>
            <%= f.file_field :cover_image, accept: "image/*", class: "form-control form-control-liquid", required: !event.persisted? || !event.cover_image.attached? %>
            <div class="form-text">
              <i class="bi bi-info-circle me-1"></i>
              <strong>Obligatoire</strong> - Upload une image paysage (1200x800 recommandé).
            </div>
          </div>

          <div class="col-12">
            <%= f.label :description, "Description détaillée", class: "form-label" %>
            <%= f.text_area :description, class: "form-control form-control-liquid", rows: 5, required: true, placeholder: "Décrivez le parcours, le niveau requis, le matériel conseillé...", onblur: "validateField(this)" %>
            <div class="invalid-feedback"></div>
          </div>

          <div class="col-12 mt-3 d-grid gap-2">
            <% if event.persisted? %>
              <%= f.submit "Mettre à jour l'événement", class: "btn btn-liquid-primary btn-lg w-100" %>
            <% else %>
              <%= f.submit "Créer l'événement", 
                  class: "btn btn-liquid-primary btn-lg w-100",
                  data: { 
                    turbo_confirm: "Votre événement sera en attente de validation par un modérateur. Continuer ?" 
                  } %>
            <% end %>
            <%= link_to 'Annuler', events_path, class: "btn btn-outline-secondary w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal de création de parcours (visible uniquement pour admins) -->
<% if current_user&.role&.level.to_i >= 60 %>
  <div class="modal fade" id="createRouteModal" tabindex="-1" aria-labelledby="createRouteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="createRouteModalLabel">
            <i class="bi bi-map me-2" aria-hidden="true"></i>Créer un nouveau parcours
          </h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <%= form_with url: routes_path, method: :post, data: { turbo: false }, id: "createRouteForm", multipart: true do |f| %>
          <div class="modal-body">
            <div class="mb-3">
              <%= f.label :name, "Nom du parcours", class: "form-label" do %>
                Nom <span class="text-danger">*</span>
              <% end %>
              <%= f.text_field :name, class: "form-control", required: true, placeholder: "Ex: Tour de Grenoble" %>
            </div>
            
            <div class="row g-3">
              <div class="col-md-6">
                <%= f.label :distance_km, "Distance (km)", class: "form-label" %>
                <div class="input-group">
                  <%= f.number_field :distance_km, class: "form-control", min: 0.1, step: 0.5, placeholder: "Ex: 15.5" %>
                  <span class="input-group-text">km</span>
                </div>
              </div>
              
              <div class="col-md-6">
                <%= f.label :difficulty, "Difficulté", class: "form-label" %>
                <%= f.select :difficulty, 
                    options_for_select([
                      ['Facile', 'easy'],
                      ['Intermédiaire', 'medium'],
                      ['Difficile', 'hard']
                    ]), 
                    { include_blank: "Non défini" },
                    class: "form-select" %>
              </div>
            </div>
            
            <div class="mb-3 mt-3">
              <%= f.label :description, "Description", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Description du parcours..." %>
            </div>
            
            <div class="mb-3">
              <%= f.label :map_image, "Carte du parcours", class: "form-label" %>
              <%= f.file_field :map_image, accept: "image/*", class: "form-control" %>
              <div class="form-text">
                <i class="bi bi-info-circle me-1"></i>
                Image de la carte du parcours (optionnel)
              </div>
            </div>
            
            <div id="createRouteErrors" class="alert alert-danger" style="display: none;"></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Créer le parcours", class: "btn btn-liquid-primary", id: "createRouteSubmit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% if event.persisted? && policy(event).destroy? %>
  <div class="text-center mt-3">
    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
      <i class="bi bi-trash me-2"></i>Supprimer l’événement
    </button>
  </div>

  <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="confirmDeleteModalLabel">Supprimer l'événement</h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <div class="modal-body">
          <p class="mb-0">
            Cette action est irréversible. Confirmez-vous la suppression de
            <strong><%= event.title %></strong> ?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
          <%= button_to event_path(event), method: :delete, form: { data: { turbo: true } }, class: "btn btn-danger" do %>
            <i class="bi bi-trash me-2"></i>Oui, supprimer
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
  // Validation champ en temps réel (harmonisé avec formulaires d'adhésion)
  function validateField(field) {
    const value = field.value.trim();
    // Chercher le feedback dans le parent (car structure peut varier)
    let feedback = field.nextElementSibling;
    if (!feedback || !feedback.classList.contains('invalid-feedback')) {
      // Si pas trouvé, chercher dans le parent
      const parent = field.closest('.col-12, .col-md-6');
      if (parent) {
        feedback = parent.querySelector('.invalid-feedback');
      }
    }
    
    // Réinitialiser
    field.classList.remove('is-invalid', 'is-valid');
    if (feedback) {
      feedback.textContent = '';
      feedback.style.display = 'none';
    }
    
    // Validation selon le type
    if (field.hasAttribute('required') && !value) {
      field.classList.add('is-invalid');
      if (feedback) {
        feedback.textContent = 'Champ obligatoire';
        feedback.style.display = 'block';
      }
      return false;
    }
    
    // Validation longueur max
    if (field.hasAttribute('maxlength') && value.length > parseInt(field.getAttribute('maxlength'))) {
      field.classList.add('is-invalid');
      if (feedback) {
        feedback.textContent = `Maximum ${field.getAttribute('maxlength')} caractères`;
        feedback.style.display = 'block';
      }
      return false;
    }
    
    // Validation longueur min (pour textarea description)
    if (field.tagName === 'TEXTAREA' && field.hasAttribute('minlength') && value.length < parseInt(field.getAttribute('minlength'))) {
      field.classList.add('is-invalid');
      if (feedback) {
        feedback.textContent = `Minimum ${field.getAttribute('minlength')} caractères`;
        feedback.style.display = 'block';
      }
      return false;
    }
    
    // Validation nombre (min)
    if (field.type === 'number' && value) {
      const numValue = parseFloat(value);
      if (field.hasAttribute('min') && numValue < parseFloat(field.getAttribute('min'))) {
        field.classList.add('is-invalid');
        if (feedback) {
          feedback.textContent = `La valeur doit être supérieure ou égale à ${field.getAttribute('min')}`;
          feedback.style.display = 'block';
        }
        return false;
      }
    }
    
    // Validation date (doit être dans le futur pour start_at)
    if (field.type === 'datetime-local' && value) {
      const selectedDate = new Date(value);
      const now = new Date();
      if (selectedDate <= now) {
        field.classList.add('is-invalid');
        if (feedback) {
          feedback.textContent = 'La date doit être dans le futur';
          feedback.style.display = 'block';
        }
        return false;
      }
    }
    
    // Validation select (niveau)
    if (field.tagName === 'SELECT' && field.hasAttribute('required') && !value) {
      field.classList.add('is-invalid');
      if (feedback) {
        feedback.textContent = 'Veuillez sélectionner une option';
        feedback.style.display = 'block';
      }
      return false;
    }
    
    // Si valide
    if (value) {
      field.classList.add('is-valid');
    }
    
    return true;
  }
  
</script>
