<div class="col-12 col-md-6 col-lg-4">
  <article class="card card-event card-liquid rounded-liquid shadow-liquid h-100">
    <div class="card-event-image">
      <%= image_tag(event_cover_image_url(event),
                    alt: event.title,
                    loading: 'lazy',
                    class: 'w-100 h-100 object-fit-cover') %>
      <span class="card-event-date badge <%= defined?(past) && past ? 'badge-liquid-secondary' : 'badge-liquid-primary' %>">
        <i class="bi bi-calendar3 me-1"></i>
        <%= l event.start_at, format: :day_month, locale: :fr %>
      </span>
    </div>

    <div class="card-body d-flex flex-column">
      <h5 class="card-title mb-2">
        <%= link_to event.title, event_path(event), class: 'stretched-link text-decoration-none text-body' %>
      </h5>

      <div class="card-event-info mb-3 text-body-secondary small">
        <p class="mb-2">
          <i class="bi bi-geo-alt text-liquid-primary me-2"></i>
          <%= event.location_text %>
        </p>
        <p class="mb-2">
          <i class="bi bi-clock text-liquid-primary me-2"></i>
          <%= l event.start_at, format: :event_long, locale: :fr %>
        </p>
        <p class="mb-0">
          <i class="bi bi-people text-liquid-primary me-2"></i>
          Organisé par <%= event.creator_user.first_name %>
        </p>
      </div>

      <p class="text-muted small mb-4 flex-grow-1"><%= truncate(event.description, length: 140) %></p>

      <% attendance_count = event.attendances_count %>

      <div class="text-body-secondary small mb-3 d-flex align-items-center gap-2">
        <i class="bi bi-people-fill"></i>
        <span>
          <%= pluralize(attendance_count, "inscrit") %>
          <% if defined?(render_signup_button) && render_signup_button && policy(event).attend? && current_user_has_attendance?(event) %>
            · <span class="text-success fw-semibold">Vous êtes inscrit(e)</span>
          <% end %>
        </span>
      </div>

      <div class="mt-auto">
        <div class="d-flex flex-wrap gap-2 action-row">
          <% if defined?(render_signup_button) && render_signup_button && policy(event).attend? %>
            <% if current_user_has_attendance?(event) %>
              <%= button_to cancel_attendance_event_path(event), method: :delete, class: "btn btn-outline-secondary flex-fill", data: { turbo_confirm: 'Annuler votre inscription ?' } do %>
                <i class="bi bi-calendar-x me-1"></i>
                <span>Se désinscrire</span>
              <% end %>
            <% else %>
              <%= button_to attend_event_path(event), method: :post, class: "btn btn-liquid-primary flex-fill", data: { turbo: false } do %>
                <i class="bi bi-calendar-plus me-1"></i>
                <span>S'inscrire</span>
              <% end %>
            <% end %>
          <% end %>

          <%= link_to(event_path(event), class: "btn btn-outline-primary flex-fill") do %>
            <i class="bi bi-eye me-1"></i>
            <span>Voir plus</span>
          <% end %>

          <% if policy(event).edit? %>
            <%= link_to(edit_event_path(event), class: "btn btn-outline-secondary flex-fill") do %>
              <i class="bi bi-pencil-square me-1"></i>
              <span>Modifier</span>
            <% end %>
          <% end %>

          <% if policy(event).destroy? %>
            <%= button_to(event_path(event), method: :delete, class: "btn btn-outline-danger flex-fill", data: { turbo_confirm: 'Supprimer cet événement ?' }) do %>
              <i class="bi bi-trash me-1"></i>
              <span>Supprimer</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </article>
</div>

