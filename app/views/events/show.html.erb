<% content_for :title, @event.title %>
<% content_for :description, "#{@event.title} - #{@event.description.presence || 'Événement Roller à Grenoble'}. #{@event.start_at.present? ? "Le #{l(@event.start_at, format: :long, locale: :fr)}" : ''}" %>

<section class="container py-4 py-lg-5">
  <article class="card card-liquid event-detail-card shadow-liquid border-0 mx-auto">
    <!-- Hero image avec overlay gradient et informations superposées -->
    <div class="hero-event-wrapper">
      <div class="hero-image-container">
        <% if @event.cover_image.attached? %>
          <%= image_tag(rails_representation_path(@event.cover_image_hero), alt: @event.title, class: "hero-image", loading: "eager") %>
        <% end %>
        <div class="hero-overlay"></div>
        
        <!-- Badge de date en haut à droite (z-index élevé) -->
        <div class="position-absolute top-0 end-0 p-3" style="z-index: 10;">
          <span class="badge badge-liquid-primary text-uppercase shadow-sm">
            <i class="bi bi-calendar3 me-1" aria-hidden="true"></i>
            <%= l @event.start_at, format: :day_month, locale: :fr %>
          </span>
        </div>
        
        <!-- Informations directement sur l'image -->
        <div class="hero-content">
          <h1 class="hero-title"><%= @event.title %></h1>
          
          <div class="hero-meta">
            <span class="meta-item">
              <i class="bi bi-geo-alt" aria-hidden="true"></i>
              <%= @event.location_text %>
            </span>
            <span class="meta-item">
              <i class="bi bi-clock" aria-hidden="true"></i>
              <%= @event.duration_min %> min
            </span>
            <% if @event.loops_count && @event.loops_count > 1 %>
              <span class="meta-item">
                <i class="bi bi-signpost-2" aria-hidden="true"></i>
                <%= @event.loops_count %> boucles • <%= number_with_precision(@event.total_distance_km, precision: 1, strip_insignificant_zeros: true) %> km
              </span>
            <% elsif @event.route.present? %>
              <span class="meta-item">
                <i class="bi bi-signpost" aria-hidden="true"></i>
                <%= @event.route.name %>
              </span>
            <% end %>
          </div>
          
          <div class="hero-badges">
            <!-- Badge Annulé (prioritaire) -->
            <% if @event.canceled? %>
              <span class="badge bg-danger">
                <i class="bi bi-x-octagon me-1" aria-hidden="true"></i>Annulé
              </span>
            <% end %>
            
            <span class="badge bg-primary">
              <i class="bi bi-people-fill me-1" aria-hidden="true"></i>
              <%= pluralize(@event.attendances_count, "inscrit") %>
            </span>
            
            <% unless @event.unlimited? %>
              <% if @event.full? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet
                </span>
              <% elsif @event.remaining_spots <= 5 %>
                <span class="badge bg-warning text-dark">
                  <i class="bi bi-exclamation-triangle me-1" aria-hidden="true"></i><%= pluralize(@event.remaining_spots, "place disponible") %>
                </span>
              <% else %>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle me-1" aria-hidden="true"></i><%= pluralize(@event.remaining_spots, "place disponible") %>
                </span>
              <% end %>
            <% else %>
              <span class="badge bg-info">
                <i class="bi bi-infinity me-1" aria-hidden="true"></i>Illimité
              </span>
            <% end %>
            
            <% if user_signed_in? && (@user_attendance || @child_attendances&.any?) %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Vous êtes inscrit(e)
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card-body p-3 p-md-4 p-lg-5">
      <!-- Zone 2 - Grille détails (4 colonnes: Quand | Rendez-vous | Tarif | Organisateur) -->
      <section class="event-details-section mb-4">
        <!-- Colonne 1: Quand -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-calendar-event" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Quand</p>
            <p class="detail-value">
              <strong><%= l @event.start_at, format: :event_long, locale: :fr %></strong>
            </p>
          </div>
        </div>

        <!-- Colonne 2: Rendez-vous -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-geo-alt<%= @event.has_gps_coordinates? ? '-fill text-success' : '' %>" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Rendez-vous</p>
            <p class="detail-value mb-2">
              <strong><%= @event.location_text %></strong>
            </p>
            
            <% if @event.google_maps_url.present? || @event.waze_url.present? %>
              <div class="detail-actions d-flex flex-wrap gap-2 mb-2">
                <% if @event.google_maps_url.present? %>
                  <a href="<%= @event.google_maps_url %>" 
                     target="_blank"
                     rel="noopener noreferrer"
                     class="btn btn-sm btn-outline-primary"
                     aria-label="Ouvrir dans Google Maps">
                    <i class="bi bi-map me-1" aria-hidden="true"></i>Google Maps
                  </a>
                <% end %>
                
                <% if @event.waze_url.present? %>
                  <a href="<%= @event.waze_url %>"
                     target="_blank"
                     rel="noopener noreferrer"
                     class="btn btn-sm btn-outline-info"
                     aria-label="Ouvrir dans Waze">
                    <i class="bi bi-compass me-1" aria-hidden="true"></i>Waze
                  </a>
                <% end %>
              </div>
            <% end %>
            
            <% if @event.has_gps_coordinates? %>
              <p class="text-muted small mb-0">
                <i class="bi bi-pin-map me-1" aria-hidden="true"></i>
                <%= @event.meeting_lat %>, <%= @event.meeting_lng %>
              </p>
            <% end %>
          </div>
        </div>

        <!-- Colonne 3: Tarif -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-currency-euro" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Tarif</p>
            <p class="detail-value">
              <%= format_event_price(@event.price_cents) %>
            </p>
          </div>
        </div>

        <!-- Colonne 4: Organisateur -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-person-badge" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Organisateur</p>
            <p class="detail-value"><%= @event.creator_user.display_name %></p>
          </div>
        </div>
      </section>

      <!-- Zone 4 - Parcours par boucle (si plusieurs boucles) -->
      <% if @event.loops_count && @event.loops_count > 1 && @event.loops_with_routes.any? %>
        <div class="event-loops-section mb-4">
          <h2 class="h5 fw-semibold mb-3">
            <i class="bi bi-signpost-2 me-2 text-liquid-primary" aria-hidden="true"></i>Parcours par boucle
          </h2>
          <div class="row g-4">
            <% @event.loops_with_routes.each_with_index do |loop_data, index| %>
              <div class="col-12 <%= @event.loops_count == 2 ? 'col-md-6' : 'col-md-4' %>">
                <div class="card card-liquid border-liquid h-100">
                  <% if loop_data[:route]&.map_image&.attached? %>
                    <div class="card-img-top" 
                         style="height: 200px; overflow: hidden; cursor: pointer;"
                         data-bs-toggle="modal" 
                         data-bs-target="#routeImageModal<%= loop_data[:loop_number] %>"
                         aria-label="Agrandir l'image du parcours <%= loop_data[:route].name %>">
                      <%= image_tag(rails_representation_path(loop_data[:route].map_image.variant(resize_to_limit: [800, 400])), 
                          alt: loop_data[:route].name, 
                          class: "w-100 h-100 object-fit-cover") %>
                    </div>
                  <% end %>
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                      <span class="badge bg-primary me-2">
                        <i class="bi bi-arrow-repeat me-1" aria-hidden="true"></i>Boucle <%= loop_data[:loop_number] %>
                      </span>
                      <% if loop_data[:distance_km] %>
                        <span class="text-muted small">
                          <i class="bi bi-signpost-2 me-1" aria-hidden="true"></i>
                          <%= number_with_precision(loop_data[:distance_km], precision: 1, strip_insignificant_zeros: true) %> km
                        </span>
                      <% end %>
                    </div>
                    <% if loop_data[:route] %>
                      <h6 class="card-title mb-2">
                        <%= loop_data[:route].name %>
                      </h6>
                      <% if loop_data[:route].difficulty.present? %>
                        <span class="badge bg-info mb-2">
                          <% difficulty_label = case loop_data[:route].difficulty
                              when 'easy' then 'Facile'
                              when 'medium' then 'Moyen'
                              when 'hard' then 'Difficile'
                              else loop_data[:route].difficulty.humanize
                            end %>
                          <%= difficulty_label %>
                        </span>
                      <% end %>
                      <% if loop_data[:route].elevation_m.present? %>
                        <p class="text-muted small mb-0">
                          <i class="bi bi-mountain me-1" aria-hidden="true"></i>
                          Dénivelé : <%= loop_data[:route].elevation_m %> m
                        </p>
                      <% end %>
                    <% else %>
                      <p class="text-muted mb-0">
                        <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                        Parcours non défini
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-3 text-center">
            <p class="text-muted small mb-0">
              <i class="bi bi-calculator me-1" aria-hidden="true"></i>
              <strong>Distance totale :</strong> <%= number_with_precision(@event.total_distance_km, precision: 1, strip_insignificant_zeros: true) %> km
            </p>
          </div>
        </div>
      <% elsif @event.route.present? %>
        <!-- Affichage du parcours unique si une seule boucle -->
        <div class="event-route-section mb-4">
          <h2 class="h5 fw-semibold mb-3">
            <i class="bi bi-signpost-2 me-2 text-liquid-primary" aria-hidden="true"></i>Parcours
          </h2>
          <div class="card card-liquid border-liquid">
            <% if @event.route.map_image.attached? %>
              <div class="card-img-top" 
                   style="height: 300px; overflow: hidden; cursor: pointer;"
                   data-bs-toggle="modal" 
                   data-bs-target="#routeImageModalSingle"
                   aria-label="Agrandir l'image du parcours <%= @event.route.name %>">
                <%= image_tag(rails_representation_path(@event.route.map_image.variant(resize_to_limit: [1200, 600])), 
                    alt: @event.route.name, 
                    class: "w-100 h-100 object-fit-cover") %>
              </div>
            <% end %>
            <div class="card-body">
              <h6 class="card-title mb-2">
                <%= @event.route.name %>
              </h6>
              <div class="d-flex flex-wrap gap-2 mb-2">
                <% if @event.route.difficulty.present? %>
                  <span class="badge bg-info">
                    <% difficulty_label = case @event.route.difficulty
                        when 'easy' then 'Facile'
                        when 'medium' then 'Moyen'
                        when 'hard' then 'Difficile'
                        else @event.route.difficulty.humanize
                      end %>
                    <%= difficulty_label %>
                  </span>
                <% end %>
                <% if @event.distance_km.present? %>
                  <span class="badge bg-primary">
                    <i class="bi bi-signpost-2 me-1" aria-hidden="true"></i>
                    <%= number_with_precision(@event.distance_km, precision: 1, strip_insignificant_zeros: true) %> km
                  </span>
                <% end %>
                <% if @event.route.elevation_m.present? %>
                  <span class="badge bg-secondary">
                    <i class="bi bi-mountain me-1" aria-hidden="true"></i>
                    <%= @event.route.elevation_m %> m
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>


      <!-- Zone inscription/annulation -->
      <% if user_signed_in? && (@user_attendance || @child_attendances&.any?) %>
        <!-- Affichage des inscriptions existantes -->
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">
              <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
              Inscriptions confirmées
            </h3>
            
            <!-- Inscription parent -->
            <% if @user_attendance %>
              <div class="alert alert-success mb-3" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <i class="bi bi-person-fill me-2" aria-hidden="true"></i>
                    <strong>Vous êtes inscrit(e)</strong>
                  </div>
                  <%= button_to cancel_attendance_event_path_for(@event, @user_attendance), 
                      method: :delete, 
                      class: "btn btn-outline-danger btn-sm", 
                      data: { turbo_confirm: 'Annuler votre inscription ? Vous pouvez vous réinscrire plus tard si vous le souhaitez.' },
                      aria: { label: 'Se désinscrire' } do %>
                    <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Inscriptions enfants -->
            <% if @child_attendances&.any? %>
              <% @child_attendances.each do |child_attendance| %>
                <div class="alert alert-info mb-3" role="alert">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <i class="bi bi-person-heart me-2" aria-hidden="true"></i>
                      <strong><%= child_attendance.participant_name %> est inscrit(e)</strong>
                    </div>
                    <%= button_to cancel_attendance_event_path_for(@event, child_attendance), 
                        method: :delete, 
                        params: { child_membership_id: child_attendance.child_membership_id },
                        class: "btn btn-outline-danger btn-sm", 
                        data: { turbo_confirm: "Annuler l'inscription de #{child_attendance.participant_name} ?" },
                        aria: { label: "Désinscrire #{child_attendance.participant_name}" } do %>
                      <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>

          </div>
        </div>
      <% end %>

      <!-- Zone liste d'attente (affichée indépendamment des inscriptions confirmées) -->
      <% if user_signed_in? && (@user_waitlist_entry || @child_waitlist_entries&.any?) %>
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">
              <i class="bi bi-hourglass-split text-warning me-2" aria-hidden="true"></i>
              En liste d'attente
            </h3>
            
            <!-- Parent en liste d'attente -->
            <% if @user_waitlist_entry %>
              <div class="alert alert-warning mb-3" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <i class="bi bi-person-fill me-2" aria-hidden="true"></i>
                    <strong>Vous êtes en liste d'attente</strong>
                    <% if @user_waitlist_entry.notified? %>
                      <span class="badge bg-info ms-2">
                        <i class="bi bi-bell-fill me-1" aria-hidden="true"></i>Place disponible
                      </span>
                    <% else %>
                      <span class="badge bg-secondary ms-2">
                        Position #<%= @user_waitlist_entry.position + 1 %>
                      </span>
                    <% end %>
                  </div>
                  <%= button_to waitlist_entry_path(@user_waitlist_entry), 
                      method: :delete, 
                      class: "btn btn-outline-danger btn-sm", 
                      data: { turbo_confirm: 'Quitter la liste d\'attente ?' },
                      aria: { label: 'Quitter la liste d\'attente' } do %>
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Quitter la file
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Enfants en liste d'attente -->
            <% if @child_waitlist_entries&.any? %>
              <% @child_waitlist_entries.each do |waitlist_entry| %>
                <div class="alert alert-warning mb-3" role="alert">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <i class="bi bi-person-heart me-2" aria-hidden="true"></i>
                      <strong><%= waitlist_entry.participant_name %> est en liste d'attente</strong>
                      <% if waitlist_entry.notified? %>
                        <span class="badge bg-info ms-2">
                          <i class="bi bi-bell-fill me-1" aria-hidden="true"></i>Place disponible
                        </span>
                      <% else %>
                        <span class="badge bg-secondary ms-2">
                          Position #<%= waitlist_entry.position + 1 %>
                        </span>
                      <% end %>
                    </div>
                    <%= button_to waitlist_entry_path(waitlist_entry), 
                        method: :delete, 
                        params: { child_membership_id: waitlist_entry.child_membership_id },
                        class: "btn btn-outline-danger btn-sm", 
                        data: { turbo_confirm: "Quitter la liste d'attente pour #{waitlist_entry.participant_name} ?" },
                        aria: { label: "Quitter la liste d'attente pour #{waitlist_entry.participant_name}" } do %>
                      <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Quitter la file
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <!-- Bouton d'inscription (affiché seulement si on peut vraiment s'inscrire) -->
      <% 
        # Calculer si on peut vraiment s'inscrire (adulte ou enfant disponible)
        can_register_adult = policy(@event).can_attend? && !@user_attendance&.persisted?
        # Différencier initiations et événements normaux
        is_initiation = @event.is_a?(Event::Initiation)
        if is_initiation
          # Pour les initiations : inclure aussi trial (essai gratuit) et pending (en attente)
          can_register_any_child = @can_register_child && current_user.memberships.where(is_child_membership: true)
            .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
            .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
        else
          # Pour les événements normaux : tous les enfants (aucune restriction de statut)
          can_register_any_child = @can_register_child && current_user.memberships.where(is_child_membership: true)
            .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
        end
        show_register_button = (can_register_adult || can_register_any_child) && !@event.full?
      %>
      <% if show_register_button %>
        <div class="primary-action">
          <button type="button" 
                  class="btn btn-liquid-primary btn-lg w-100" 
                  data-bs-toggle="modal" 
                  data-bs-target="#confirmAttendModalShow"
                  aria-label="S'inscrire à cet événement">
            <i class="bi bi-calendar-plus me-2" aria-hidden="true"></i>Inscription
          </button>
        </div>
      <% elsif !user_signed_in? %>
        <div class="alert alert-info mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Connexion requise</strong>
          <p class="mb-0">Connectez-vous pour vous inscrire à cet événement.</p>
          <div class="mt-3">
            <%= link_to new_user_session_path, class: "btn btn-primary" do %>
              <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>Se connecter
            <% end %>
          </div>
        </div>
      <% elsif @event.full? %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
          <strong>Cet événement est complet</strong>
          <p class="mb-0">Toutes les places sont prises. Rejoignez la liste d'attente pour être notifié(e) si une place se libère.</p>
          <% if user_signed_in? %>
            <div class="mt-3 d-flex flex-wrap gap-2">
              <%# Bouton pour rejoindre la liste d'attente (adulte) si pas déjà en liste d'attente %>
              <% if @user_waitlist_entry.nil? && !@user_attendance&.persisted? %>
                <button type="button" 
                        class="btn btn-liquid-primary" 
                        data-bs-toggle="modal" 
                        data-bs-target="#joinWaitlistModalShowEvent"
                        aria-label="Rejoindre la liste d'attente">
                  <i class="bi bi-person-plus me-2" aria-hidden="true"></i>Rejoindre la liste d'attente
                </button>
              <% end %>
              
              <%# Bouton pour inscrire un enfant si disponible %>
              <% 
                if is_initiation
                  has_available_children = current_user.memberships.where(is_child_membership: true)
                    .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
                    .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
                else
                  # Pour les événements normaux : tous les enfants (aucune restriction de statut)
                  has_available_children = current_user.memberships.where(is_child_membership: true)
                    .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
                end
              %>
              <% if @can_register_child && has_available_children %>
                <button type="button" 
                        class="btn btn-outline-primary" 
                        data-bs-toggle="modal" 
                        data-bs-target="#confirmAttendModalShow"
                        aria-label="Inscrire un enfant">
                  <i class="bi bi-person-heart me-2" aria-hidden="true"></i>Inscrire un enfant
                </button>
              <% end %>
            </div>
          <% end %>
        </div>
      <% elsif user_signed_in? && !current_user.memberships.active_now.exists? && current_user.attendances.active.where(free_trial_used: true).exists? %>
        <%# Afficher seulement si l'utilisateur n'a PAS d'adhésion active ET a déjà utilisé son essai gratuit %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Adhésion requise</strong>
          <p class="mb-0">Vous devez avoir une adhésion active pour vous inscrire à cet événement.</p>
          <div class="mt-3">
            <%= link_to new_membership_path(type: 'adult'), class: "btn btn-primary" do %>
              <i class="bi bi-person-plus me-2" aria-hidden="true"></i>Adhérer maintenant
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Zone description -->
      <div class="event-description mb-4">
        <h2 class="h5 fw-semibold mb-3">
          <i class="bi bi-info-circle me-2 text-liquid-primary" aria-hidden="true"></i>
          À propos
        </h2>
        <div class="text-body" style="line-height: 1.7;">
          <%= simple_format(@event.description) %>
        </div>
      </div>

      <!-- Zone actions -->
      <%= render 'shared/event_actions', 
          event: @event, 
          user_attendance: @user_attendance, 
          child_attendances: @child_attendances %>
    </div>
  </article>
</section>

<!-- Modal de confirmation d'inscription -->
<% 
  # Calculer si on peut s'inscrire (adulte ou enfant disponible)
  can_register_adult = policy(@event).can_attend? && !@event.full?
  is_initiation = @event.is_a?(Event::Initiation)
  if is_initiation
    # Pour les initiations : inclure aussi trial (essai gratuit) et pending (en attente)
    can_register_any_child = @can_register_child && current_user.memberships.where(is_child_membership: true)
      .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
      .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
  else
    # Pour les événements normaux : tous les enfants (aucune restriction de statut)
    can_register_any_child = @can_register_child && current_user.memberships.where(is_child_membership: true)
      .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
  end
  # Vérifier si on peut inscrire un enfant même si l'événement est complet
  can_register_child_when_full = @event.full? && user_signed_in? && can_register_any_child
  show_register_modal = (can_register_adult || can_register_any_child) || can_register_child_when_full
%>
<% if show_register_modal %>
  <div class="modal fade" id="confirmAttendModalShow" tabindex="-1" aria-labelledby="confirmAttendModalShowLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="confirmAttendModalShowLabel">
            <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>Confirmer votre inscription
          </h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <%= form_with url: attend_event_path_for(@event), method: :post, data: { turbo: false }, id: "attendFormShow", class: "attend-form" do |f| %>
          <div class="modal-body">
            <%= render 'shared/registration_form_fields', 
                form: f, 
                event: @event, 
                prefix_id: "_show", 
                show_alert: true, 
                show_summary: true,
                user_attendance: @user_attendance,
                child_attendances: @child_attendances %>

            <!-- Bouton Ajouter au calendrier -->
            <% if user_signed_in? %>
              <div class="mb-3 text-center">
                <%= link_to event_path(@event, format: :ics), 
                    class: "btn btn-outline-primary btn-sm w-100", 
                    title: 'Ajouter au calendrier',
                    aria: { label: 'Ajouter au calendrier' } do %>
                  <i class="bi bi-calendar-event me-2" aria-hidden="true"></i>Ajouter à mon calendrier
                <% end %>
              </div>
            <% end %>
            
            <p class="text-muted small mb-0">
              <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
              Vous recevrez une confirmation par email et pourrez annuler votre inscription à tout moment.
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" id="cancelBtnShow">Annuler</button>
            <%= f.submit "Confirmer l'inscription", class: "btn btn-liquid-primary", id: "submitBtnShow", data: { bs_dismiss: "modal" } %>
          </div>
          <script>
            (function() {
              var formShow = document.getElementById('attendFormShow');
              var submitBtnShow = document.getElementById('submitBtnShow');
              var cancelBtnShow = document.getElementById('cancelBtnShow');
              
              if (formShow && submitBtnShow) {
                formShow.addEventListener('submit', function() {
                  submitBtnShow.disabled = true;
                  submitBtnShow.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Inscription en cours...';
                  if (cancelBtnShow) cancelBtnShow.disabled = true;
                });
              }
            })();
          </script>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal pour rejoindre la liste d'attente -->
<% if user_signed_in? && @event.full? %>
  <div class="modal fade" id="joinWaitlistModalShowEvent" tabindex="-1" aria-labelledby="joinWaitlistModalShowEventLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="joinWaitlistModalShowEventLabel">
            <i class="bi bi-hourglass-split me-2" aria-hidden="true"></i>Rejoindre la liste d'attente
          </h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <%= form_with url: join_waitlist_event_path_for(@event), method: :post, local: true, data: { turbo: false }, id: "joinWaitlistFormShowEvent" do |f| %>
          <div class="modal-body">
            <p class="mb-3">
              Cet événement est complet. Rejoignez la liste d'attente pour être notifié(e) si une place se libère.
            </p>
            
            <%= render 'shared/registration_form_fields', 
                form: f, 
                event: @event, 
                prefix_id: "_waitlist_show_event", 
                show_alert: false, 
                show_summary: false,
                user_attendance: @user_attendance,
                child_attendances: @child_attendances,
                is_waitlist: true %>
            
            <div class="alert alert-info mb-0" role="alert">
              <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
              <small>Vous recevrez un email si une place se libère. Vous aurez 24 heures pour confirmer votre inscription.</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Rejoindre la liste d'attente", class: "btn btn-liquid-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal de confirmation de suppression -->
<%= render 'shared/event_delete_modal', event: @event %>

<!-- Modals pour agrandir les images de parcours -->
<% if @event.loops_count && @event.loops_count > 1 && @event.loops_with_routes.any? %>
  <% @event.loops_with_routes.each do |loop_data| %>
    <% if loop_data[:route]&.map_image&.attached? %>
      <div class="modal fade" id="routeImageModal<%= loop_data[:loop_number] %>" tabindex="-1" aria-labelledby="routeImageModalLabel<%= loop_data[:loop_number] %>" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
          <div class="modal-content bg-transparent border-0">
            <div class="modal-header border-0 pb-0">
              <h5 class="modal-title text-white" id="routeImageModalLabel<%= loop_data[:loop_number] %>">
                <%= loop_data[:route].name %> - Boucle <%= loop_data[:loop_number] %>
              </h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body p-0 text-center">
              <%= image_tag(rails_representation_path(loop_data[:route].map_image), 
                  alt: loop_data[:route].name, 
                  class: "img-fluid rounded", 
                  style: "max-height: 85vh; width: auto;") %>
            </div>
          </div>
        </div>
      </div>
