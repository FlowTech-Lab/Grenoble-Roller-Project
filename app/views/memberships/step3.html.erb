<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body p-4">
          <!-- Header -->
          <div class="text-center mb-4 pb-3 border-bottom">
            <h1 class="h4 mb-2">
              <i class="bi bi-person-plus text-liquid-primary me-2"></i>ADHÉSION SAISON <%= @season %>
            </h1>
            <p class="text-muted small mb-0">
              par <strong>GRENOBLE ROLLER</strong>
            </p>
          </div>

          <!-- Progress Bar -->
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <div class="d-flex align-items-center">
                <span class="badge bg-success me-2">
                  <i class="bi bi-check-circle me-1"></i>Complétée
                </span>
                <span class="small">Choix de l'adhésion</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-success me-2">
                  <i class="bi bi-check-circle me-1"></i>Complétée
                </span>
                <span class="small">Adhérents</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-primary me-2">
                  <i class="bi bi-list me-1"></i>Actuelle
                </span>
                <span class="small">Coordonnées</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-secondary me-2">
                  <i class="bi bi-check-circle me-1"></i>
                </span>
                <span class="small text-muted">Récapitulatif</span>
              </div>
            </div>
            <div class="progress" style="height: 4px;">
              <div class="progress-bar bg-primary" role="progressbar" style="width: 83%;" aria-valuenow="83" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>

          <!-- Formulaire Étape 3 : Coordonnées -->
          <h3 class="h5 mb-3">Les champs suivis d'une étoile (*) sont obligatoires</h3>
          
          <%= form_with url: memberships_path, method: :post, local: true, data: { turbo: false } do |f| %>
            <%= f.hidden_field :category, value: @category %>
            <%= f.hidden_field :tshirt_variant_id, value: @tshirt_variant_id %>
            <%= f.hidden_field :first_name, value: @first_name %>
            <%= f.hidden_field :last_name, value: @last_name %>
            <%= f.hidden_field :date_of_birth, value: @date_of_birth %>
            <%= f.hidden_field :phone, value: @phone %>
            <%= f.hidden_field :email, value: @email %>
            
            <div class="mb-4">
              <div class="row g-3">
                <div class="col-12">
                  <%= f.label :address, "Adresse *", class: "form-label" %>
                  <%= f.text_field :address, 
                      class: "form-control", 
                      value: current_user&.address,
                      required: true,
                      placeholder: "Numéro et nom de rue" %>
                </div>
                
                <div class="col-12 col-md-6">
                  <%= f.label :city, "Ville *", class: "form-label" %>
                  <%= f.text_field :city, 
                      class: "form-control", 
                      value: current_user&.city,
                      required: true,
                      placeholder: "Ville" %>
                </div>
                
                <div class="col-12 col-md-6">
                  <%= f.label :postal_code, "Code postal *", class: "form-label" %>
                  <%= f.text_field :postal_code, 
                      class: "form-control", 
                      value: current_user&.postal_code,
                      maxlength: 5,
                      required: true,
                      placeholder: "38000" %>
                </div>
              </div>
            </div>

            <!-- Options -->
            <div class="mb-4">
              <div class="form-check mb-3">
                <%= f.check_box :wants_whatsapp, 
                    { class: "form-check-input", id: "wants_whatsapp" }, 
                    "1", "0" %>
                <label class="form-check-label" for="wants_whatsapp">
                  <strong>Je souhaite rejoindre la communauté WhatsApp pour avoir les informations de l'association *</strong>
                </label>
              </div>
              
              <div class="form-check">
                <%= f.check_box :wants_email_info, 
                    { class: "form-check-input", id: "wants_email_info", checked: true }, 
                    "1", "0" %>
                <label class="form-check-label" for="wants_email_info">
                  <strong>Réception de mail d'information (rando/initiation) ou d'évènement Grenoble Roller. Dans tous les cas aucun mail promotionnel ne vous sera envoyé. *</strong>
                </label>
              </div>
            </div>

            <!-- Boutons Navigation -->
            <div class="d-flex justify-content-between mt-4">
              <%= link_to step2_memberships_path(category: @category, tshirt_variant_id: @tshirt_variant_id), 
                  class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left me-1"></i>Précédent
              <% end %>
              <%= f.submit "Valider et payer", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

