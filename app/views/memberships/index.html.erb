<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body p-4">
          <!-- Header -->
          <div class="text-center mb-4 pb-3 border-bottom">
            <h1 class="h4 mb-2">
              <i class="bi bi-person-badge text-liquid-primary me-2"></i>
              <% if current_user.has_active_children_memberships? %>
                Mes adhésions
              <% else %>
                Mon adhésion
              <% end %>
            </h1>
            <p class="text-muted small mb-0">Consultez l'historique de vos adhésions</p>
          </div>

          <% if @memberships.empty? %>
            <!-- Empty state -->
            <div class="text-center py-5">
              <i class="bi bi-person-x text-muted" style="font-size: 3rem;"></i>
              <h3 class="h6 text-muted mt-3 mb-2">Vous n'avez pas encore d'adhésion</h3>
              <p class="text-muted small mb-4">Rejoignez l'association et profitez de tous les avantages !</p>
              <%= link_to new_membership_path, class: "btn btn-liquid-primary" do %>
                <i class="bi bi-person-plus me-2"></i>Adhérer maintenant
              <% end %>
            </div>
          <% else %>
            <!-- Adhésion personnelle -->
            <% personal_memberships = @memberships.select { |m| !m.is_child_membership } %>
            <% if personal_memberships.any? %>
              <div class="mb-4">
                <h3 class="h6 mb-3">
                  <i class="bi bi-person me-2 text-liquid-primary"></i>Mon adhésion
                </h3>
                <% personal_memberships.each_with_index do |membership, idx| %>
                  <%= render partial: 'membership_card', locals: { membership: membership, is_child: false, last: (idx == personal_memberships.size - 1 && !@memberships.select { |m| m.is_child_membership }.any?) } %>
                <% end %>
              </div>
            <% end %>
            
            <!-- Adhésions enfants -->
            <% children_memberships = @memberships.select { |m| m.is_child_membership } %>
            <% if children_memberships.any? %>
              <div class="mb-4">
                <h3 class="h6 mb-3">
                  <i class="bi bi-people me-2 text-liquid-warning"></i>Adhésions enfants (<%= children_memberships.count %>)
                </h3>
                <% children_memberships.each_with_index do |membership, idx| %>
                  <%= render partial: 'membership_card', locals: { membership: membership, is_child: true, last: idx == children_memberships.size - 1 } %>
                <% end %>
              </div>
            <% end %>

            <!-- New membership button -->
            <div class="text-center mt-4 pt-3 border-top">
              <%= link_to new_membership_path, class: "btn btn-liquid-primary" do %>
                <i class="bi bi-person-plus me-2"></i>Nouvelle adhésion
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
