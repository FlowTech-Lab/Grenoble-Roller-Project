<% 
  # Calculs pour les stats
  personal_memberships = @memberships.select { |m| !m.is_child_membership? }
  children_memberships = @memberships.select { |m| m.is_child_membership? }
  children_pending = children_memberships.select { |m| m.pending? }
  children_paid = children_memberships.select { |m| !m.pending? }
  active_memberships = @memberships.select { |m| m.active? }
  pending_memberships = @memberships.select { |m| m.pending? }
  expired_memberships = @memberships.select { |m| m.expired? }
  total_paid = @memberships.select { |m| !m.pending? }.sum(&:total_amount_cents) / 100.0
  
  # Date d'expiration la plus proche
  nearest_expiry = @memberships.select { |m| m.active? && m.end_date.present? }
    .map(&:end_date).compact.min
%>


<div class="container py-4">
  <!-- HERO SECTION -->
  <div class="hero-memberships">
    <div class="d-flex justify-content-between align-items-center flex-wrap">
      <div>
        <h1 class="h2 mb-2">
          <i class="bi bi-person-badge me-2 fs-2"></i>
          <% if current_user.has_active_children_memberships? %>
            Mes adh√©sions
          <% else %>
            Mon adh√©sion
          <% end %>
        </h1>
        <p class="mb-2 opacity-75" style="font-style: italic;">
          G√©rez vos adh√©sions et celles de vos enfants
        </p>
        <div class="d-flex align-items-center gap-3 flex-wrap mt-3">
          <span class="badge bg-white text-dark px-3 py-2" style="font-size: 0.875rem;">
            <i class="bi bi-calendar-event me-1"></i>
            Saison <%= @season %>
          </span>
          <span class="badge bg-white text-dark px-3 py-2" style="font-size: 0.875rem;">
            <i class="bi bi-calendar-range me-1"></i>
            <%= l(@start_date, format: :short) %> ‚Üí <%= l(@end_date, format: :short) %>
          </span>
        </div>
      </div>
      <% if @memberships.empty? %>
        <div class="mt-3 mt-md-0">
          <%= link_to new_membership_path(check_age: true), class: "btn btn-light btn-lg" do %>
            <i class="bi bi-person-plus me-2"></i>Adh√©rer maintenant
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- LAYOUT 2 COLONNES -->
  <div class="row">
    <!-- SIDEBAR GAUCHE (Desktop) -->
    <div class="col-12 col-lg-4 mb-4 mb-lg-0">
      <div class="sidebar-sticky">
        <!-- Quick Actions -->
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h6 mb-3">
              <i class="bi bi-lightning-charge text-liquid-primary me-2"></i>
              Actions rapides
            </h3>
            
            <!-- Adh√©rer pour moi -->
            <% unless @active_membership %>
              <%= link_to new_membership_path(check_age: true), class: "text-decoration-none" do %>
                <div class="quick-action-card teal">
                  <div class="d-flex align-items-center mb-2">
                    <i class="bi bi-person-badge fs-3 text-liquid-primary me-3"></i>
                    <div class="flex-grow-1">
                      <h4 class="h6 mb-0 fw-bold">J'adh√®re</h4>
                      <small class="text-muted">
                        <% if @pending_membership %>
                          Adh√©sion en attente
                        <% else %>
                          Pas d'adh√©sion active
                        <% end %>
                      </small>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
            
            <!-- Ajouter un enfant -->
            <%= link_to new_membership_path(type: 'child'), class: "text-decoration-none" do %>
              <div class="quick-action-card orange">
                <div class="d-flex align-items-center mb-2">
                  <i class="bi bi-person-plus fs-3 text-liquid-warning me-3"></i>
                  <div class="flex-grow-1">
                    <h4 class="h6 mb-0 fw-bold">Ajouter un enfant</h4>
                    <small class="text-muted">
                      <% if children_pending.any? %>
                        <%= children_pending.count %> en attente
                      <% else %>
                        Inscrire un enfant
                      <% end %>
                    </small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Overview Stats -->
        <% if @memberships.any? %>
          <div class="card card-liquid shadow-sm mb-4">
            <div class="card-body">
              <h3 class="h6 mb-3">
                <i class="bi bi-graph-up text-liquid-primary me-2"></i>
                Vue d'ensemble
              </h3>
              
              <div class="d-flex flex-column gap-2">
                <% if active_memberships.any? %>
                  <div class="memberships-stats-item">
                    <span><i class="bi bi-check-circle text-success me-2"></i>Actives</span>
                    <strong><%= active_memberships.count %></strong>
                  </div>
                <% end %>
                
                <% if pending_memberships.any? %>
                  <div class="memberships-stats-item">
                    <span><i class="bi bi-hourglass-split text-warning me-2"></i>En attente</span>
                    <strong><%= pending_memberships.count %></strong>
                  </div>
                <% end %>
                
                <% if nearest_expiry %>
                  <div class="memberships-stats-item">
                    <span><i class="bi bi-calendar-x text-info me-2"></i>Expire le</span>
                    <strong><%= l(nearest_expiry, format: :short) %></strong>
                  </div>
                <% end %>
                
                <% if total_paid > 0 %>
                  <div class="memberships-stats-item">
                    <span><i class="bi bi-currency-euro text-primary me-2"></i>Total pay√©</span>
                    <strong><%= number_to_currency(total_paid, unit: "‚Ç¨", separator: ",", delimiter: " ", format: "%n %u") %></strong>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Description -->
        <div class="card card-liquid shadow-sm">
          <div class="card-body">
            <p class="small text-muted mb-0">
              <i class="bi bi-info-circle me-2"></i>
              <strong>En adh√©rent √† notre association vous soutenez notre volont√© de faire d√©couvrir le roller √† tous. 
              Vous aidez √† l'organisation de nos traditionnelles randonn√©es roller pour le plus grand plaisir 
              des grenoblois qui aiment la glisse !</strong>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- COLONNE DROITE : CONTENU PRINCIPAL -->
    <div class="col-12 col-lg-8">
      <% if @memberships.empty? %>
        <!-- EMPTY STATE AM√âLIOR√â -->
        <div class="empty-state-modern">
          <div class="empty-state-header">
            <div class="empty-state-icon">üéâ</div>
            <h2 class="empty-state-title">Rejoignez Grenoble Roller !</h2>
            <p class="empty-state-subtitle">
              Devenez membre et profitez des avantages exclusifs de l'association
            </p>
          </div>
          
          <div class="empty-state-benefits">
            <div class="benefit-item">
              <div class="benefit-icon">
                <i class="bi bi-people-fill"></i>
              </div>
              <span class="benefit-text">Rejoindre une communaut√© passionn√©e</span>
            </div>
            <div class="benefit-item">
              <div class="benefit-icon">
                <i class="bi bi-heart-fill"></i>
              </div>
              <span class="benefit-text">Soutenir l'association et ses projets</span>
            </div>
            <div class="benefit-item">
              <div class="benefit-icon">
                <i class="bi bi-book-fill"></i>
              </div>
              <span class="benefit-text">Participer aux initiations roller</span>
            </div>
            <div class="benefit-item">
              <div class="benefit-icon">
                <i class="bi bi-tag-fill"></i>
              </div>
              <span class="benefit-text">R√©duction sur les t-shirts et goodies</span>
            </div>
          </div>
          
          <div class="empty-state-cta">
            <%= link_to new_membership_path(check_age: true), class: "btn btn-liquid-primary btn-lg btn-cta-modern" do %>
              <i class="bi bi-person-plus me-2"></i>Adh√©rer maintenant
              <i class="bi bi-arrow-right ms-2"></i>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- ADH√âSION PERSONNELLE -->
        <% if personal_memberships.any? %>
          <% personal_memberships.each do |membership| %>
            <%= render partial: 'membership_card_improved', locals: { membership: membership, is_child: false } %>
          <% end %>
        <% end %>

        <!-- ADH√âSIONS ENFANTS -->
        <% if children_memberships.any? %>
          <div class="card card-liquid shadow-sm mb-4">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="h5 mb-0">
                  <i class="bi bi-people text-liquid-warning me-2"></i>
                  Adh√©sions enfants
                  <span class="badge bg-liquid-warning text-dark ms-2"><%= children_memberships.count %></span>
                </h3>
                    <%= link_to new_membership_path(type: 'child'), class: "btn btn-sm btn-liquid-warning" do %>
                      <i class="bi bi-person-plus me-1"></i>Ajouter
                    <% end %>
              </div>

              <!-- Enfants en attente de paiement -->
              <% if children_pending.any? %>
                <div class="alert alert-warning payment-alert-improved">
                  <h4 class="h6 mb-3">
                    <i class="bi bi-pin-map me-2"></i>
                    <%= children_pending.count %> ENFANT(S) EN ATTENTE DE PAIEMENT
                  </h4>
                  
                  <div class="mb-3">
                    <% children_pending.each do |membership| %>
                      <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                        <div>
                          <strong><%= membership.child_full_name %></strong>
                          <small class="text-muted d-block">
                            <%= number_to_currency(membership.total_amount_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: " ", format: "%n %u") %>
                          </small>
                        </div>
                        <span class="badge bg-warning text-dark">‚è≥ Pending</span>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center mb-3 p-2 rounded" style="background: var(--liquid-glass-bg); border: 1px solid var(--card-border-color);">
                    <strong>Total :</strong>
                    <strong class="fs-5">
                      <%= number_to_currency(children_pending.sum(&:total_amount_cents) / 100.0, unit: "‚Ç¨", separator: ",", delimiter: " ", format: "%n %u") %>
                    </strong>
                  </div>
                  
                  <%= form_with url: pay_multiple_memberships_path, method: :post, local: true, data: { turbo: false }, class: "mb-2" do |f| %>
                    <% children_pending.each do |membership| %>
                      <%= f.hidden_field "membership_ids[]", value: membership.id %>
                    <% end %>
                    <%= f.submit "üîê Payer avec HelloAsso ‚Üí", class: "btn btn-warning btn-lg w-100 mb-2" %>
                  <% end %>
                  
                  <div class="d-flex gap-3 justify-content-center">
                    <small class="text-muted">
                      <i class="bi bi-shield-check me-1"></i>Paiement s√©curis√©
                    </small>
                    <small class="text-muted">
                      <i class="bi bi-envelope me-1"></i>Re√ßu par email
                    </small>
                  </div>
                </div>
                
                <!-- Mini cards enfants pending -->
                <div class="row g-2 mb-3">
                  <% children_pending.each do |membership| %>
                    <div class="col-12 col-md-6">
                      <%= render partial: 'child_mini_card', locals: { membership: membership, is_pending: true } %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <!-- Enfants pay√©s/actifs -->
              <% if children_paid.any? %>
                <% if children_pending.any? %>
                  <hr class="my-4">
                  <h4 class="h6 mb-3 text-muted">Pay√©es / Actives</h4>
                <% end %>
                
                <div class="row g-2">
                  <% children_paid.each do |membership| %>
                    <div class="col-12 col-md-6">
                      <%= render partial: 'child_mini_card', locals: { membership: membership, is_pending: false } %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- HISTORIQUE (adh√©sions expir√©es) -->
        <% if expired_memberships.any? %>
          <div class="card card-liquid shadow-sm">
            <div class="card-body">
              <h3 class="h6 mb-3">
                <i class="bi bi-clock-history text-muted me-2"></i>
                Historique
              </h3>
              <% expired_memberships.each do |membership| %>
                <div class="membership-history-item">
                  <div>
                    <strong>
                      <% if membership.is_child_membership? %>
                        <%= membership.child_full_name %> - Saison <%= membership.season %>
                      <% else %>
                        Saison <%= membership.season %>
                      <% end %>
                    </strong>
                    <small class="text-muted d-block">
                      ‚úì Pay√©e (<%= number_to_currency(membership.amount_cents / 100.0, unit: "‚Ç¨", separator: ",", delimiter: " ", format: "%n %u") %>)
                      - Expir√©e le <%= l(membership.end_date, format: :short) if membership.end_date %>
                    </small>
                  </div>
                  <% if membership.is_child_membership? %>
                    <%= link_to new_membership_path(type: 'child', renew_from: membership.id), class: "btn btn-sm btn-success" do %>
                      <i class="bi bi-arrow-repeat me-1"></i>R√©adh√©rer
                    <% end %>
                  <% else %>
                    <%= link_to new_membership_path(check_age: true), class: "btn btn-sm btn-success" do %>
                      <i class="bi bi-arrow-repeat me-1"></i>Renouveler
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
