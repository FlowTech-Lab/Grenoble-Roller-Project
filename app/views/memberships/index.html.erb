<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body p-4">
          <!-- Header -->
          <div class="text-center mb-4 pb-3 border-bottom">
            <h1 class="h4 mb-2">
              <i class="bi bi-person-badge text-liquid-primary me-2"></i>
              <% if current_user.has_active_children_memberships? %>
                Mes adhésions
              <% else %>
                Mon adhésion
              <% end %>
            </h1>
            <p class="text-muted small mb-0">Consultez l'historique de vos adhésions</p>
          </div>

          <!-- Adhésions existantes -->
          <% if @memberships.any? %>
            <!-- Adhésion personnelle -->
            <% personal_memberships = @memberships.select { |m| !m.is_child_membership? } %>
            <% if personal_memberships.any? %>
              <div class="mb-4">
                <h3 class="h6 mb-3">
                  <i class="bi bi-person me-2 text-liquid-primary"></i>Mon adhésion
                </h3>
                <% personal_memberships.each_with_index do |membership, idx| %>
                  <%= render partial: 'membership_card', locals: { membership: membership, is_child: false, last: (idx == personal_memberships.size - 1 && !@memberships.select { |m| m.is_child_membership? }.any?) } %>
                <% end %>
              </div>
            <% end %>
            
            <!-- Adhésions enfants -->
            <% children_memberships = @memberships.select { |m| m.is_child_membership? } %>
            <% children_pending = children_memberships.select { |m| m.pending? } %>
            <% children_paid = children_memberships.select { |m| !m.pending? } %>
            
            <% if children_memberships.any? %>
              <div class="mb-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h3 class="h6 mb-0">
                    <i class="bi bi-people me-2 text-liquid-warning"></i>
                    Adhésions enfants
                    <span class="badge bg-liquid-warning text-dark ms-2"><%= children_memberships.count %></span>
                  </h3>
                </div>
                
                <!-- Enfants en attente de paiement -->
                <% if children_pending.any? %>
                  <div class="alert alert-warning mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong><%= children_pending.count %> enfant(s) en attente de paiement</strong>
                      </div>
                      <%= form_with url: pay_multiple_memberships_path, method: :post, local: true, data: { turbo: false }, class: "d-inline" do |f| %>
                        <% children_pending.each do |membership| %>
                          <%= f.hidden_field "membership_ids[]", value: membership.id %>
                        <% end %>
                        <%= f.submit "Payer tous (#{number_to_currency(children_pending.sum(&:total_amount_cents) / 100.0, unit: "€", separator: ",", delimiter: " ", format: "%n %u")})", 
                            class: "btn btn-sm btn-warning" %>
                      <% end %>
                    </div>
                  </div>
                  
                  <% children_pending.each_with_index do |membership, idx| %>
                    <%= render partial: 'membership_card', locals: { membership: membership, is_child: true, is_pending: true, last: (idx == children_pending.size - 1 && children_paid.empty?) } %>
                  <% end %>
                <% end %>
                
                <!-- Enfants déjà payés (actifs ou expirés) -->
                <% if children_paid.any? %>
                  <% if children_pending.any? %>
                    <hr class="my-4">
                    <h4 class="h6 mb-3 text-muted">Adhésions enfants payées</h4>
                  <% end %>
                  <% children_paid.each_with_index do |membership, idx| %>
                    <%= render partial: 'membership_card', locals: { membership: membership, is_child: true, is_pending: false, last: idx == children_paid.size - 1 } %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
            
            <!-- Séparateur si adhésions existantes -->
            <hr class="my-5">
          <% else %>
            <!-- Empty state -->
            <div class="text-center py-4 mb-4">
              <i class="bi bi-person-x text-muted" style="font-size: 3rem;"></i>
              <h3 class="h6 text-muted mt-3 mb-2">Vous n'avez pas encore d'adhésion</h3>
              <p class="text-muted small mb-0">Rejoignez l'association et profitez de tous les avantages !</p>
            </div>
          <% end %>

          <!-- Section Nouvelle adhésion -->
          <div class="mb-4">
            <div class="text-center mb-4 pb-3 border-bottom">
              <h2 class="h5 mb-2">
                <i class="bi bi-person-plus text-liquid-primary me-2"></i>ADHÉSION SAISON <%= @season %>
              </h2>
              <p class="text-muted small mb-0">
                par <strong>GRENOBLE ROLLER</strong>
              </p>
              <p class="text-muted small mt-2 mb-0">
                <i class="bi bi-calendar-event me-1"></i>
                Adhésion valable du <%= l(@start_date, format: :long) %> au <%= l(@end_date, format: :long) %>
              </p>
            </div>

            <!-- Description -->
            <div class="mb-4">
              <p class="mb-2">
                En adhérent à notre association vous soutenez notre volonté de faire découvrir le roller à tous. 
                Vous aidez à l'organisation de nos traditionnelles randonnées roller pour le plus grand plaisir 
                des grenoblois qui aiment la glisse !
              </p>
              <p class="mb-0">
                <strong>L'adhésion est nécessaire pour participer aux initiations le samedi matin.</strong>
              </p>
            </div>

            <!-- Section 1 : Adhérer pour moi -->
            <div class="mb-5">
              <h3 class="h6 mb-3">
                <i class="bi bi-person-check me-2 text-liquid-primary"></i>Adhérer pour moi
              </h3>
              
              <!-- Alerte si adhésion active -->
              <% if @active_membership %>
                <div class="alert alert-success mb-3" role="alert">
                  <div class="d-flex align-items-start">
                    <i class="bi bi-check-circle me-2 fs-5"></i>
                    <div class="flex-grow-1">
                      <strong>Adhésion active</strong>
                      <p class="mb-2 small">Vous avez déjà une adhésion active pour cette saison.</p>
                      <%= link_to membership_path(@active_membership), class: "btn btn-sm btn-success" do %>
                        <i class="bi bi-eye me-1"></i>Voir mon adhésion
                      <% end %>
                    </div>
                  </div>
                </div>
              <!-- Alerte si adhésion pending -->
              <% elsif @pending_membership %>
                <div class="alert alert-warning mb-3" role="alert">
                  <div class="d-flex align-items-start">
                    <i class="bi bi-exclamation-triangle me-2 fs-5"></i>
                    <div class="flex-grow-1">
                      <strong>Adhésion en attente de paiement</strong>
                      <p class="mb-2 small">Vous avez déjà une adhésion en attente de paiement pour cette saison.</p>
                      <%= link_to membership_path(@pending_membership), class: "btn btn-sm btn-warning" do %>
                        <i class="bi bi-credit-card me-1"></i>Finaliser le paiement
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
              
              <!-- Carte "Adhérer pour moi" - masquée si adhésion active -->
              <% unless @active_membership %>
                <div class="row g-3">
                  <div class="col-12">
                    <% if @pending_membership %>
                      <div class="card border-2 opacity-50" style="pointer-events: none;">
                        <div class="card-body text-center p-4">
                          <i class="bi bi-person-badge fs-1 text-muted mb-3"></i>
                          <h4 class="h6 fw-bold mb-2 text-muted">Adhérer pour moi</h4>
                          <p class="text-muted small mb-3">
                            Votre âge sera calculé automatiquement pour vous orienter vers le bon formulaire
                          </p>
                          <span class="btn btn-secondary btn-lg w-100 disabled">Désactivé</span>
                        </div>
                      </div>
                    <% else %>
                      <%= link_to new_membership_path(check_age: true), class: "text-decoration-none" do %>
                        <div class="card border-2 hover-shadow">
                          <div class="card-body text-center p-4">
                            <i class="bi bi-person-badge fs-1 text-liquid-primary mb-3"></i>
                            <h4 class="h6 fw-bold mb-2">Adhérer pour moi</h4>
                            <p class="text-muted small mb-3">
                              Votre âge sera calculé automatiquement pour vous orienter vers le bon formulaire
                            </p>
                            <span class="btn btn-liquid-primary btn-lg w-100">Commencer</span>
                          </div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Séparateur -->
            <hr class="my-4">

            <!-- Section 2 : Inscrire un enfant -->
            <div class="mb-4">
              <h3 class="h6 mb-3">
                <i class="bi bi-people me-2 text-liquid-warning"></i>Inscrire un enfant
              </h3>
              <p class="text-muted small mb-3">
                Ajoutez un enfant à la fois. Vous pourrez payer pour tous les enfants en attente en une seule transaction.
              </p>
              
              <%= link_to new_membership_path(type: "child"), class: "btn btn-liquid-warning btn-lg w-100" do %>
                <i class="bi bi-person-plus me-2"></i>Ajouter un enfant
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
