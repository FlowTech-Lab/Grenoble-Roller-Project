<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-10">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body p-4">
          <!-- Header -->
          <div class="text-center mb-4 pb-3 border-bottom">
            <h1 class="h4 mb-2">
              <i class="bi bi-person-plus text-liquid-primary me-2"></i>ADHÉSION SAISON <%= @season %>
            </h1>
            <p class="text-muted small mb-0">
              par <strong>GRENOBLE ROLLER</strong>
            </p>
          </div>

          <!-- Progress Bar -->
          <div class="mb-4">
            <div class="d-flex align-items-center justify-content-between mb-2">
              <div class="d-flex align-items-center">
                <span class="badge bg-success me-2">
                  <i class="bi bi-check-circle me-1"></i>Complétée
                </span>
                <span class="small">Choix de l'adhésion</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-primary me-2">
                  <i class="bi bi-person me-1"></i>Actuelle
                </span>
                <span class="small">Adhérents</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-secondary me-2">
                  <i class="bi bi-list me-1"></i>
                </span>
                <span class="small text-muted">Coordonnées</span>
              </div>
              <div class="d-flex align-items-center">
                <span class="badge bg-secondary me-2">
                  <i class="bi bi-check-circle me-1"></i>
                </span>
                <span class="small text-muted">Récapitulatif</span>
              </div>
            </div>
            <div class="progress" style="height: 4px;">
              <div class="progress-bar bg-primary" role="progressbar" style="width: 66%;" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>

          <!-- Formulaire Étape 2 : Informations adhérent -->
          <h3 class="h5 mb-3">Les champs suivis d'une étoile (*) sont obligatoires</h3>
          
          <%= form_with url: step3_memberships_path, method: :get, local: true, data: { turbo: false } do |f| %>
            <%= f.hidden_field :category, value: @category %>
            <%= f.hidden_field :tshirt_variant_id, value: @tshirt_variant_id %>
            
            <div class="mb-3">
              <h4 class="h6 mb-3">Cotisation Adhérent Grenoble Roller - Adhérent 1</h4>
              
              <div class="row g-3">
                <div class="col-12 col-md-6">
                  <%= f.label :first_name, "Prénom *", class: "form-label" %>
                  <%= f.text_field :first_name, 
                      class: "form-control", 
                      value: @user&.first_name,
                      maxlength: 50,
                      required: true,
                      placeholder: "Prénom" %>
                  <small class="text-muted">0 / 50 caractères restants</small>
                </div>
                
                <div class="col-12 col-md-6">
                  <%= f.label :last_name, "Nom *", class: "form-label" %>
                  <%= f.text_field :last_name, 
                      class: "form-control", 
                      value: @user&.last_name,
                      maxlength: 50,
                      required: true,
                      placeholder: "Nom" %>
                  <small class="text-muted">0 / 50 caractères restants</small>
                </div>
                
                <div class="col-12 col-md-6">
                  <%= f.label :date_of_birth, "Date de naissance *", class: "form-label" %>
                  <%= f.date_field :date_of_birth, 
                      class: "form-control", 
                      value: @user&.date_of_birth,
                      required: true,
                      placeholder: "jj/mm/aaaa" %>
                </div>
                
                <div class="col-12 col-md-6">
                  <%= f.label :phone, "Numéro téléphone *", class: "form-label" %>
                  <%= f.telephone_field :phone, 
                      class: "form-control", 
                      value: @user&.phone,
                      maxlength: 10,
                      required: true,
                      placeholder: "0612345678" %>
                </div>
                
                <div class="col-12">
                  <%= f.label :email, "Email *", class: "form-label" %>
                  <%= f.email_field :email, 
                      class: "form-control", 
                      value: @user&.email,
                      required: true,
                      placeholder: "email@example.com" %>
                </div>
              </div>
            </div>

            <!-- Boutons Navigation -->
            <div class="d-flex justify-content-between mt-4">
              <%= link_to new_membership_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left me-1"></i>Précédent
              <% end %>
              <%= f.submit "Suivant", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

