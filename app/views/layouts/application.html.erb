<!DOCTYPE html>
<html lang="fr" data-bs-theme="light">
  <head>
    <title><%= content_for(:title) || "Grenoble Roller" %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Favicons from assets pipeline (best practice) -->
    <link rel="icon" href="<%= image_path('favicon-512.png') %>" type="image/png" sizes="512x512">
    <link rel="icon" href="<%= image_path('logo/logo_grenobleroller_color.png') %>" type="image/png" sizes="512x512">
    <link rel="apple-touch-icon" href="<%= image_path('favicon-512.png') %>" sizes="512x512">
    <link rel="apple-touch-icon" href="<%= image_path('logo/logo_grenobleroller_color.png') %>" sizes="512x512">

    <%= stylesheet_link_tag "application.bootstrap", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <%= render 'layouts/navbar' %>

    <main class="flex-grow-1">
      <%= render 'layouts/flash' %>
      <%= yield %>
    </main>

    <%= render 'layouts/footer' %>

    <!-- Theme toggle script -->
    <script>
      function toggleTheme() {
        const html = document.documentElement;
        const currentTheme = html.getAttribute('data-bs-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        
        html.setAttribute('data-bs-theme', newTheme);
        
        const icons = ['theme-icon', 'theme-icon-fixed'];
        icons.forEach(id => {
          const icon = document.getElementById(id);
          if (icon) {
            icon.className = newTheme === 'light' ? 'bi bi-moon-fill' : 'bi bi-sun-fill';
          }
        });
        
        localStorage.setItem('theme', newTheme);
      }
      
      // Initialize theme when DOM is ready
      document.addEventListener('DOMContentLoaded', function() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        const html = document.documentElement;
        
        html.setAttribute('data-bs-theme', savedTheme);
        
        const icons = ['theme-icon', 'theme-icon-fixed'];
        icons.forEach(id => {
          const icon = document.getElementById(id);
          if (icon) {
            icon.className = savedTheme === 'light' ? 'bi bi-moon-fill' : 'bi bi-sun-fill';
          }
        });
      });

      // Cart count update function
      function updateCartCount() {
        const cartCountEl = document.getElementById('cartCount');
        if (!cartCountEl) return;
        
        // Récupérer le count depuis le data-attribute ou le calculer
        const currentCount = parseInt(cartCountEl.getAttribute('data-cart-count') || cartCountEl.textContent || '0', 10);
        cartCountEl.textContent = currentCount;
        
        // Cacher le badge si count = 0, sinon l'afficher
        if (currentCount > 0) {
          cartCountEl.style.display = 'inline-block';
          cartCountEl.style.visibility = 'visible';
        } else {
          cartCountEl.style.display = 'none';
          cartCountEl.style.visibility = 'hidden';
        }
      }

      // Update cart count on page load
      document.addEventListener('DOMContentLoaded', updateCartCount);
      
      // Expose function globally for use in other scripts
      window.updateCartCount = updateCartCount;
    </script>
  </body>
</html>
