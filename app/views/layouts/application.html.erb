<!DOCTYPE html>
<html lang="fr" data-bs-theme="light">
  <head>
    <title><%= content_for(:title) || "Grenoble Roller" %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= content_for(:description) || "Découvrez la communauté Roller Grenobloise. Participez à des événements, partagez vos sorties et connectez-vous avec d'autres riders à Grenoble." %>">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Favicons -->
    <%= favicon_link_tag asset_path('favicon-512.png'), type: 'image/png', sizes: '512x512' %>
    <link rel="apple-touch-icon" href="<%= asset_path('favicon-512.png') %>" sizes="512x512">
    <link rel="shortcut icon" href="<%= asset_path('favicon-512.png') %>" type="image/png">

    <%= stylesheet_link_tag "application.bootstrap", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <!-- Skip link - WCAG 2.4.1 Level A -->
    <a href="#main-content" class="skip-link">
      Aller au contenu principal
    </a>

    <%= render 'layouts/navbar' %>

    <main id="main-content" class="flex-grow-1" tabindex="-1">
      <%= render 'layouts/flash' %>
      <%= yield %>
    </main>

    <%= render 'layouts/footer-simple' %>

    <!-- Cookie Consent Banner -->
    <%= render 'layouts/cookie_banner' %>

    <!-- Theme toggle script -->
    <script>
      function toggleTheme() {
        const html = document.documentElement;
        const currentTheme = html.getAttribute('data-bs-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';
        
        html.setAttribute('data-bs-theme', newTheme);
        
        // Mettre à jour les icônes
        const sunIcon = document.getElementById('theme-icon-sun');
        const moonIcon = document.getElementById('theme-icon-moon');
        const toggle = document.getElementById('theme-toggle');
        
        if (sunIcon && moonIcon) {
          const isDark = newTheme === 'dark';
          sunIcon.classList.toggle('d-none', !isDark);
          moonIcon.classList.toggle('d-none', isDark);
        }
        
        // Mettre à jour ARIA
        if (toggle) {
          const isDark = newTheme === 'dark';
          toggle.setAttribute('aria-pressed', isDark);
          toggle.setAttribute('aria-label', 
            isDark 
              ? 'Basculer vers le thème clair' 
              : 'Basculer vers le thème sombre'
          );
        }
        
        localStorage.setItem('theme', newTheme);
      }
      
      // Initialize theme when DOM is ready
      document.addEventListener('DOMContentLoaded', function() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        const html = document.documentElement;
        
        html.setAttribute('data-bs-theme', savedTheme);
        
        // Initialiser les icônes
        const sunIcon = document.getElementById('theme-icon-sun');
        const moonIcon = document.getElementById('theme-icon-moon');
        const toggle = document.getElementById('theme-toggle');
        
        if (sunIcon && moonIcon) {
          const isDark = savedTheme === 'dark';
          sunIcon.classList.toggle('d-none', !isDark);
          moonIcon.classList.toggle('d-none', isDark);
        }
        
        // Initialiser ARIA
        if (toggle) {
          const isDark = savedTheme === 'dark';
          toggle.setAttribute('aria-pressed', isDark);
          toggle.setAttribute('aria-label', 
            isDark 
              ? 'Basculer vers le thème clair' 
              : 'Basculer vers le thème sombre'
          );
        }
      });

      // Cart count update function
      function updateCartCount() {
        const cartCountEl = document.getElementById('cartCount');
        if (!cartCountEl) return;
        
        // Récupérer le count depuis le data-attribute ou le calculer
        const currentCount = parseInt(cartCountEl.getAttribute('data-cart-count') || cartCountEl.textContent || '0', 10);
        cartCountEl.textContent = currentCount;
        
        // Cacher le badge si count = 0, sinon l'afficher
        if (currentCount > 0) {
          cartCountEl.style.display = 'inline-block';
          cartCountEl.style.visibility = 'visible';
        } else {
          cartCountEl.style.display = 'none';
          cartCountEl.style.visibility = 'hidden';
        }
      }

      // Update cart count on page load
      document.addEventListener('DOMContentLoaded', updateCartCount);
      
      // Expose function globally for use in other scripts
      window.updateCartCount = updateCartCount;

      // Empêcher le scroll du body quand le dropdown menu utilisateur est ouvert (mobile)
      // Solution pour le problème où la page derrière défile au lieu du menu
      (function() {
        let scrollPosition = 0;
        let isScrollLocked = false;

        // Vérifier si on est sur mobile (viewport < 992px, breakpoint Bootstrap lg)
        function isMobile() {
          return window.innerWidth < 992;
        }

        function lockBodyScroll() {
          // Ne bloquer le scroll que sur mobile
          if (!isMobile() || isScrollLocked) return;
          
          // Sauvegarder la position de scroll actuelle
          scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
          
          // Bloquer le scroll du body (méthode compatible mobile)
          document.body.style.overflow = 'hidden';
          document.body.style.position = 'fixed';
          document.body.style.top = `-${scrollPosition}px`;
          document.body.style.width = '100%';
          
          // Prévenir le scroll sur iOS/Safari mobile
          document.body.style.touchAction = 'none';
          
          isScrollLocked = true;
        }

        function unlockBodyScroll() {
          if (!isScrollLocked) return;
          
          // Restaurer le scroll du body
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.width = '';
          document.body.style.touchAction = '';
          
          // Restaurer la position de scroll
          window.scrollTo(0, scrollPosition);
          
          isScrollLocked = false;
        }

        function initDropdownScrollLock() {
          // Trouver tous les dropdowns dans la navbar
          const dropdowns = document.querySelectorAll('.navbar .dropdown');
          
          dropdowns.forEach(function(dropdown) {
            const dropdownMenu = dropdown.querySelector('.dropdown-menu');
            if (!dropdownMenu) return;

            // Quand le dropdown s'ouvre
            dropdown.addEventListener('show.bs.dropdown', lockBodyScroll);

            // Quand le dropdown se ferme (tous les cas)
            dropdown.addEventListener('hide.bs.dropdown', unlockBodyScroll);
            dropdown.addEventListener('hidden.bs.dropdown', unlockBodyScroll);
          });
        }

        // Initialiser au chargement de la page
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initDropdownScrollLock);
        } else {
          initDropdownScrollLock();
        }

        // Réinitialiser après navigation Turbo (si utilisé)
        if (typeof Turbo !== 'undefined') {
          document.addEventListener('turbo:load', function() {
            unlockBodyScroll(); // S'assurer que le scroll est débloqué après navigation
            initDropdownScrollLock();
          });
        }

        // Gérer le redimensionnement de la fenêtre (si on passe de mobile à desktop)
        window.addEventListener('resize', function() {
          if (!isMobile() && isScrollLocked) {
            unlockBodyScroll();
          }
        });
      })();
    </script>
  </body>
</html>
