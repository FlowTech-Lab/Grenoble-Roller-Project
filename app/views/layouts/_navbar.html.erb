<!-- Grenoble Roller Navbar -->
<nav class="navbar navbar-grenoble-roller navbar-expand-lg navbar-liquid sticky-top shadow-liquid mb-4">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="<%= root_path %>">
      <%= image_tag('logo/logo_grenobleroller_color.png', alt: 'Grenoble Roller', class: 'navbar-logo navbar-logo-light', style: 'height: 40px;') %>
      <%= image_tag('logo/logo_grenobleroller_white.png', alt: 'Grenoble Roller', class: 'navbar-logo navbar-logo-dark', style: 'height: 40px;') %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarComponent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarComponent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">Accueil</a>
        </li>
        <li class="nav-item">
          <%= link_to association_path, class: "nav-link" do %>
            <i class="bi bi-info-circle me-1"></i>L'association
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to events_path, class: "nav-link" do %>
            <i class="bi bi-calendar-event me-1"></i>Événements
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to shop_path, class: "nav-link" do %>
            <i class="bi bi-bag me-1"></i>Boutique
          <% end %>
        </li>
      </ul>
      <div class="d-flex align-items-center gap-2">
        <!-- Theme toggle -->
        <button class="btn btn-outline-primary" onclick="toggleTheme()">
          <i class="bi bi-moon-fill" id="theme-icon"></i>
        </button>
        
        <%= link_to cart_path, class: "btn btn-outline-primary cart-button", id: "cart-button" do %>
          <i class="bi bi-basket"></i>
          <% if cart_items_count > 0 %>
            <span class="badge text-bg-danger cart-badge" id="cartCount" data-cart-count="<%= cart_items_count %>"><%= cart_items_count %></span>
          <% else %>
            <span class="badge text-bg-danger cart-badge" id="cartCount" data-cart-count="0" style="display: none;">0</span>
          <% end %>
        <% end %>

        <!-- User menu -->
        <% if user_signed_in? %>
          <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle me-2"></i>
              <%= current_user.first_name.presence || current_user.email %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <h6 class="dropdown-header">
                  <i class="bi bi-person me-2"></i>Mon compte
                </h6>
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                  <i class="bi bi-person me-2"></i>Mon profil
                <% end %>
              </li>
              <li>
                <%= link_to orders_path, class: "dropdown-item" do %>
                  <i class="bi bi-box-seam me-2"></i>Mes commandes
                <% end %>
              </li>
              <% if current_user.role&.name == 'admin' %>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to "#", class: "dropdown-item" do %>
                    <i class="bi bi-shield-check me-2"></i>Administration
                  <% end %>
                </li>
              <% end %>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item text-danger" do %>
                  <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                <% end %>
              </li>
            </ul>
          </div>
        <% else %>
          <%= link_to new_user_session_path, class: "btn btn-outline-primary" do %>
            <i class="bi bi-box-arrow-in-right me-2"></i>Connexion
          <% end %>
          <%= link_to new_user_registration_path, class: "btn btn-liquid-primary" do %>
            <i class="bi bi-person-plus me-2"></i>S'inscrire
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
