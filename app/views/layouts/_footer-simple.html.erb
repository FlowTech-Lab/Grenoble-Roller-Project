<!-- ========================================
      VARIATION: SIMPLE
      Bonnes pratiques 2025 : Navigation simplifiée, réseaux sociaux actifs uniquement, responsive
    ======================================== -->

<footer class="footer-grenoble-roller footer-simple" role="contentinfo">
    <div class="container py-4">
        <div class="row g-3">
            <!-- Colonne gauche : Informations association -->
            <div class="col-md-6 text-center text-md-start">
                <h6 class="footer-title mb-2">
                    <strong>Grenoble Roller</strong>
                </h6>
                <p class="small text-muted mb-2">
                    Communauté de passionnés de roller à Grenoble
                </p>
                <p class="small text-muted mb-0">
                    © <%= Date.current.year %> Grenoble Roller - Tous droits réservés
                </p>
            </div>
            
            <!-- Colonne droite : Navigation et réseaux sociaux -->
            <div class="col-md-6 text-center text-md-end">
                <!-- Navigation principale -->
                <nav aria-label="Navigation du pied de page" class="mb-2">
                    <%= link_to "À propos", about_path, class: "footer-link me-3" %>
                    <%= link_to "Événements", events_path, class: "footer-link me-3" %>
                    <% if user_signed_in? && policy(Event).create? %>
                        <%= link_to "Créer un événement", new_event_path, class: "footer-link me-3" %>
                    <% end %>
                </nav>
                
                <!-- Réseaux sociaux -->
                <div class="footer-social mb-2" aria-label="Réseaux sociaux">
                    <a href="https://www.facebook.com/GrenobleRoller/" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="footer-link me-2" 
                       aria-label="Suivez-nous sur Facebook">
                        <i class="bi bi-facebook" aria-hidden="true"></i>
                        <span class="visually-hidden">Facebook</span>
                    </a>
                    <a href="https://www.instagram.com/grenoble_roller/" 
                       target="_blank" 
                       rel="noopener noreferrer" 
                       class="footer-link" 
                       aria-label="Suivez-nous sur Instagram">
                        <i class="bi bi-instagram" aria-hidden="true"></i>
                        <span class="visually-hidden">Instagram</span>
                    </a>
                </div>
                
                <!-- Mentions légales (masquées temporairement) -->
                <%# TODO: Créer pages Contact, CGU, Confidentialité pour conformité légale %>
                <% if false %>
                    <nav aria-label="Mentions légales" class="small">
                        <%= link_to "Contact", "#", class: "footer-link me-2" %>
                        <%= link_to "CGU", "#", class: "footer-link me-2" %>
                        <%= link_to "Confidentialité", "#", class: "footer-link" %>
                    </nav>
                <% end %>
            </div>
        </div>
    </div>
</footer>
