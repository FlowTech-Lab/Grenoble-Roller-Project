<div class="container-fluid py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card card-liquid rounded-liquid shadow-liquid auth-form">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <i class="bi bi-shield-lock fs-1 text-liquid-primary"></i>
            <h3 class="mt-2">Changer le mot de passe</h3>
            <p class="text-muted small">Sécurisez votre compte</p>
          </div>
          
          <% if user_signed_in? %>
            <!-- Formulaire pour utilisateur connecté (avec current_password) -->
            <%= form_for(current_user, as: :user, url: password_path(:user), html: { method: :put }, data: { turbo: false }) do |f| %>
              <%= render "devise/shared/error_messages", resource: current_user %>
              
              <!-- Current Password -->
              <div class="mb-3">
                <%= f.label :current_password, "Mot de passe actuel", class: "form-label" %>
                <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true %>
              </div>
              
              <!-- New Password -->
              <div class="mb-3">
                <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true %>
                <% if @minimum_password_length %>
                  <div class="form-text">Au moins <%= @minimum_password_length %> caractères</div>
                <% end %>
              </div>
              
              <!-- Confirm New Password -->
              <div class="mb-3">
                <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true %>
              </div>
              
              <!-- Submit -->
              <button type="submit" class="btn btn-liquid-primary w-100 mb-3">
                <i class="bi bi-check-circle me-2"></i>
                Modifier le mot de passe
              </button>
            <% end %>
          <% else %>
            <!-- Formulaire pour réinitialisation via email (avec token) -->
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>
              
              <!-- New Password -->
              <div class="mb-3">
                <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true %>
                <% if @minimum_password_length %>
                  <div class="form-text">Au moins <%= @minimum_password_length %> caractères</div>
                <% end %>
              </div>
              
              <!-- Confirm New Password -->
              <div class="mb-3">
                <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true %>
              </div>
              
              <!-- Submit -->
              <button type="submit" class="btn btn-liquid-primary w-100 mb-3">
                <i class="bi bi-check-circle me-2"></i>
                Modifier le mot de passe
              </button>
            <% end %>
          <% end %>
          
          <!-- Link -->
          <div class="text-center">
            <% if user_signed_in? %>
              <%= link_to edit_user_registration_path, class: "small text-decoration-none" do %>
                <i class="bi bi-arrow-left me-1"></i>
                Retour au profil
              <% end %>
            <% else %>
              <%= link_to new_session_path(resource_name), class: "small text-decoration-none" do %>
                <i class="bi bi-arrow-left me-1"></i>
                Retour à la connexion
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

