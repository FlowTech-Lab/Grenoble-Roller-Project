<div class="container-fluid py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card card-liquid rounded-liquid shadow-liquid auth-form">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <i class="bi bi-person-plus fs-1 text-liquid-primary"></i>
            <h3 class="mt-2">Inscription</h3>
            <p class="text-muted small">Créez votre compte</p>
          </div>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Légende champs obligatoires -->
            <p class="form-required-legend">
              <span class="required-marker">*</span> Champs obligatoires
            </p>

            <!-- First Name -->
            <div class="mb-3">
              <%= f.label :first_name, "Prénom", class: "form-label required" %>
              <%= f.text_field :first_name, class: "form-control form-control-liquid", placeholder: "Jean", required: true, aria: { required: true } %>
            </div>
            
            <!-- Last Name -->
            <div class="mb-3">
              <%= f.label :last_name, "Nom (optionnel)", class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control form-control-liquid", placeholder: "Dupont" %>
            </div>
            
            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label required" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-liquid", placeholder: "votre@email.com", required: true, aria: { required: true } %>
            </div>
            
            <!-- Phone -->
            <div class="mb-3">
              <%= f.label :phone, "Téléphone (optionnel)", class: "form-label" %>
              <%= f.text_field :phone, class: "form-control form-control-liquid", placeholder: "06 12 34 56 78" %>
            </div>
            
            <!-- Password -->
            <div class="mb-3" data-controller="password-strength">
              <%= f.label :password, "Mot de passe", class: "form-label required" %>
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  class: "form-control form-control-liquid", 
                  placeholder: "••••••••", 
                  required: true, 
                  aria: { required: true },
                  data: { password_strength_target: "input" } %>
              <% if @minimum_password_length %>
                <div class="form-text">Au moins <%= @minimum_password_length %> caractères</div>
              <% end %>
              
              <!-- Indicateur de force du mot de passe -->
              <div class="password-strength-container d-none mt-2">
                <div class="password-strength-bar">
                  <div class="password-strength-meter" 
                       data-password-strength-target="meter"></div>
                </div>
                <div class="password-strength-feedback mt-1 small" 
                     data-password-strength-target="feedback"
                     style="display: none;">
                  <span data-password-strength-target="strengthText"></span>
                </div>
              </div>
            </div>
            
            <!-- Confirm Password -->
            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label required" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true, aria: { required: true } %>
            </div>
            
            <!-- Bio -->
            <div class="mb-3">
              <%= f.label :bio, "Biographie (optionnel)", class: "form-label" %>
              <%= f.text_area :bio, rows: 3, class: "form-control form-control-liquid", placeholder: "Parlez-nous de vous, de votre passion pour le roller..." %>
              <div class="form-text">Présentez-vous brièvement à la communauté</div>
            </div>

            <%= f.hidden_field :role_id, value: Role.find_by(code: 'USER')&.id || Role.find_by(name: 'Utilisateur')&.id || Role.first&.id %>
            
            <!-- Submit -->
            <button type="submit" class="btn btn-liquid-primary w-100 mb-3">
              <i class="bi bi-person-check me-2"></i>
              S'inscrire
            </button>
          <% end %>
          
          <!-- Link -->
          <div class="text-center">
            <p class="small text-muted mb-0">
              Déjà un compte ? 
              <%= link_to "Connectez-vous", new_session_path(resource_name), class: "text-decoration-none" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
