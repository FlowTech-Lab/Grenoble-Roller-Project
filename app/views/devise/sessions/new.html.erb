<div class="container-fluid py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card card-liquid rounded-liquid shadow-liquid auth-form">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <i class="bi bi-roller-skate fs-1 text-liquid-primary"></i>
            <h3 class="mt-2">Connexion</h3>
            <p class="text-muted small">Accédez à votre compte</p>
          </div>
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <!-- Légende champs obligatoires -->
            <p class="form-required-legend">
              <span class="required-marker">*</span> Champs obligatoires
            </p>
            
            <!-- Email -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label required" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-liquid", placeholder: "votre@email.com", required: true, aria: { required: true } %>
            </div>
            
            <!-- Password -->
            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label required" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-liquid", placeholder: "••••••••", required: true, aria: { required: true } %>
            </div>
            
            <!-- Remember me -->
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>
            
            <!-- Turnstile Widget (Invisible - Protection Anti-Bot) -->
            <% unless Rails.env.test? %>
              <% turnstile_site_key = Rails.application.credentials.dig(:turnstile, :site_key) || ENV['TURNSTILE_SITE_KEY'] %>
              <% if turnstile_site_key.present? %>
                <div class="cf-turnstile" 
                     data-sitekey="<%= turnstile_site_key %>"
                     data-theme="light"
                     data-size="invisible"
                     data-callback="onTurnstileLoginSuccess"
                     data-error-callback="onTurnstileError">
                </div>
              <% end %>
            <% end %>
            
            <!-- Submit -->
            <button type="submit" class="btn btn-liquid-primary w-100 mb-3" id="submit-login">
              <i class="bi bi-box-arrow-in-right me-2"></i>
              Se connecter
            </button>
          <% end %>
          
          <!-- Links -->
          <div class="text-center">
            <% if devise_mapping.recoverable? %>
              <%= link_to new_password_path(resource_name), class: "d-block small text-decoration-none mb-2" do %>
                Mot de passe oublié ?
              <% end %>
            <% end %>
            <% if devise_mapping.registerable? %>
              <p class="small text-muted mb-0">
                Pas de compte ? 
                <%= link_to "Inscrivez-vous", new_registration_path(resource_name), class: "text-decoration-none" %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% unless Rails.env.test? %>
  <!-- Cloudflare Turnstile Script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  
  <script>
    // Gestion du widget Turnstile invisible pour la connexion
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form[action*="session"]');
      const submitButton = document.getElementById('submit-login');
      let turnstileWidgetId = null;

      if (form && submitButton && typeof turnstile !== 'undefined') {
        // Récupérer l'ID du widget Turnstile
        const turnstileElement = document.querySelector('.cf-turnstile');
        if (turnstileElement) {
          turnstileWidgetId = turnstileElement.dataset.sitekey ? turnstile.render(turnstileElement) : null;
        }

        // Intercepter la soumission du formulaire
        form.addEventListener('submit', function(e) {
          // Si Turnstile est configuré, déclencher la vérification
          if (turnstileWidgetId !== null && typeof turnstile !== 'undefined') {
            e.preventDefault();
            turnstile.execute(turnstileWidgetId);
          }
          // Sinon, laisser le formulaire se soumettre normalement (test/dev)
        });
      }
    });

    // Callback de succès Turnstile pour connexion
    function onTurnstileLoginSuccess(token) {
      const form = document.querySelector('form[action*="session"]');
      if (form) {
        form.submit();
      }
    }

    // Callback d'erreur Turnstile
    function onTurnstileError() {
      alert('Erreur lors de la vérification de sécurité. Veuillez réessayer.');
    }
  </script>
<% end %>
