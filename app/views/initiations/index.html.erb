<% content_for :title, 'Initiations Roller - Grenoble Roller' %>
<% content_for :description, "Cours d'initiation au roller tous les samedis matin de 10h15 à 12h00 au Gymnase Ampère. Gratuit après adhésion, essai gratuit disponible." %>

<section class="banner-page mb-4">
  <div class="banner-overlay"></div>
  <div class="banner-content">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <i class="bi bi-book-fill banner-icon-small mb-2" aria-hidden="true"></i>
          <h1 class="banner-title-page mb-3">Initiations Roller</h1>
          <p class="banner-subtitle-page mb-4">
            Cours d'initiation tous les samedis matin
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container pb-5">
  <!-- Infos statiques -->
  <div class="card card-liquid shadow-sm mb-4">
    <div class="card-body p-4">
      <h2 class="h5 mb-3">
        <i class="bi bi-info-circle text-liquid-primary me-2" aria-hidden="true"></i>
        Informations pratiques
      </h2>
      <div class="row g-3">
        <div class="col-12 col-md-6">
          <p class="mb-2">
            <i class="bi bi-clock text-liquid-primary me-2" aria-hidden="true"></i>
            <strong>Horaires :</strong> Samedi 10h15-12h00
          </p>
          <p class="mb-2">
            <i class="bi bi-geo-alt text-liquid-primary me-2" aria-hidden="true"></i>
            <strong>Lieu :</strong> Gymnase Ampère, 74 Rue Anatole France, 38100 Grenoble
          </p>
        </div>
        <div class="col-12 col-md-6">
          <p class="mb-2">
            <i class="bi bi-people text-liquid-primary me-2" aria-hidden="true"></i>
            <strong>Public :</strong> Adhérents, enfants dès 6 ans (adulte obligatoire)
          </p>
          <p class="mb-2">
            <i class="bi bi-tag text-liquid-primary me-2" aria-hidden="true"></i>
            <strong>Tarif :</strong> Gratuit après adhésion 10€
          </p>
          <p class="mb-0">
            <i class="bi bi-gift text-liquid-primary me-2" aria-hidden="true"></i>
            <strong>Essai gratuit :</strong> 1 essai sans adhésion
          </p>
        </div>
      </div>
    </div>
  </div>

          <!-- Liste des prochaines initiations -->
          <div id="initiations-upcoming">
            <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3">
              <div>
                <h2 class="h2 fw-bold mb-1">
                  <i class="bi bi-calendar-event me-2" aria-hidden="true"></i>
                  Prochaines séances
                </h2>
                <p class="text-body-secondary mb-0">
                  Les prochaines initiations disponibles.
                </p>
              </div>
              <div class="d-flex align-items-center gap-3">
                <% if user_signed_in? && policy(Event::Initiation.new).create? %>
                  <%= link_to new_initiation_path, class: "btn btn-liquid-primary" do %>
                    <i class="bi bi-plus-circle me-2" aria-hidden="true"></i>
                    Créer une initiation
                  <% end %>
                <% end %>
                <span class="badge badge-liquid-primary fs-6">
                  <%= pluralize(@initiations.size, "séance", "séances") %>
                </span>
              </div>
            </div>

    <% if @initiations.any? %>
      <div class="event-grid">
        <div class="row g-4">
          <% @initiations.each_with_index do |initiation, index| %>
            <%= render 'initiations/initiation_card',
                       initiation: initiation,
                       is_first: (index == 0) %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info border-0 shadow-sm">
        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
        Aucune séance d'initiation planifiée pour le moment — de nouvelles séances seront bientôt disponibles !
      </div>
    <% end %>
  </div>
</section>

