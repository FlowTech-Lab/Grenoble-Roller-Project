<div class="card card-liquid shadow-sm mb-4">
  <div class="card-body p-4">
    <h3 class="h5 mb-3">
      <i class="bi bi-calendar-check text-liquid-primary me-2" aria-hidden="true"></i>
      Confirmer votre inscription
    </h3>

    <%= form_with url: attend_event_path_for(initiation), method: :post, local: true, data: { turbo: false } do |f| %>
      <%= render 'shared/registration_form_fields', form: f, event: initiation, prefix_id: "", show_alert: true, show_summary: false %>

      <!-- Bouton submit -->
      <div class="d-grid">
        <%= f.submit "Confirmer l'inscription", 
            class: "btn btn-liquid-primary btn-lg",
            data: { disable_with: "Inscription en cours..." } %>
      </div>

      <p class="text-muted small mt-3 mb-0">
        <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
        Vous recevrez une confirmation par email et pourrez annuler votre inscription Ã  tout moment.
      </p>
    <% end %>
  </div>
</div>

