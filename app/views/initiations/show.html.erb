<% content_for :title, @initiation.title %>
<% content_for :description, "#{@initiation.title} - Cours d'initiation au roller le #{l(@initiation.start_at, format: :long, locale: :fr)} au Gymnase Ampère." %>

<section class="container py-4 py-lg-5">
  <article class="card card-liquid event-detail-card shadow-liquid border-0 mx-auto">
    <!-- Hero section -->
    <div class="hero-event-wrapper">
      <div class="hero-image-container">
        <%= image_tag("https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?w=1200&h=500&fit=crop", 
                      alt: @initiation.title, 
                      class: "hero-image", 
                      loading: "eager") %>
        <div class="hero-overlay"></div>
        
        <!-- Badge de date -->
        <div class="position-absolute top-0 end-0 p-3" style="z-index: 10;">
          <span class="badge badge-liquid-primary text-uppercase shadow-sm">
            <i class="bi bi-calendar3 me-1" aria-hidden="true"></i>
            <%= l @initiation.start_at, format: :day_month, locale: :fr %>
          </span>
        </div>
        
        <!-- Informations sur l'image -->
        <div class="hero-content">
          <h1 class="hero-title"><%= @initiation.title %></h1>
          
          <div class="hero-meta">
            <span class="meta-item">
              <i class="bi bi-geo-alt" aria-hidden="true"></i>
              <%= @initiation.location_text %>
            </span>
            <span class="meta-item">
              <i class="bi bi-clock" aria-hidden="true"></i>
              1h45 (10h15 - 12h00)
            </span>
          </div>
          
          <div class="hero-badges">
            <% if @initiation.canceled? %>
              <span class="badge bg-danger">
                <i class="bi bi-x-octagon me-1" aria-hidden="true"></i>Annulé
              </span>
            <% end %>
            
            <span class="badge bg-primary">
              <i class="bi bi-people-fill me-1" aria-hidden="true"></i>
              <%= pluralize(@initiation.participants_count, "inscrit") %>
            </span>
            
            <% if @initiation.allow_non_member_discovery? %>
              <!-- Affichage séparé des places si l'option est activée -->
              <% if @initiation.full? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet
                </span>
              <% else %>
                <% if @initiation.available_member_places > 0 %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                    <%= pluralize(@initiation.available_member_places, "place adhérent") %>
                  </span>
                <% else %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet (adhérents)
                  </span>
                <% end %>
                <% if @initiation.available_non_member_places > 0 %>
                  <span class="badge bg-info">
                    <i class="bi bi-gift me-1" aria-hidden="true"></i>
                    <%= pluralize(@initiation.available_non_member_places, "place découverte") %>
                  </span>
                <% else %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet (découverte)
                  </span>
                <% end %>
              <% end %>
            <% else %>
              <!-- Affichage classique si l'option n'est pas activée -->
              <% if @initiation.full? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet
                </span>
              <% elsif @initiation.available_places <= 5 %>
                <span class="badge bg-warning text-dark">
                  <i class="bi bi-exclamation-triangle me-1" aria-hidden="true"></i>
                  <%= pluralize(@initiation.available_places, "place disponible") %>
                </span>
              <% else %>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                  <%= pluralize(@initiation.available_places, "place disponible") %>
                </span>
              <% end %>
            <% end %>
            
            <% if user_signed_in? && @user_attendance %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Vous êtes inscrit(e)
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card-body p-3 p-md-4 p-lg-5">
      <!-- Zone détails (4 colonnes) -->
      <section class="event-details-section mb-4">
        <!-- Colonne 1: Quand -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-calendar-event" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Quand</p>
            <p class="detail-value">
              <strong><%= l @initiation.start_at, format: :event_long, locale: :fr %></strong>
            </p>
          </div>
        </div>

        <!-- Colonne 2: Rendez-vous -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-geo-alt-fill text-success" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Rendez-vous</p>
            <p class="detail-value mb-2">
              <strong><%= @initiation.location_text %></strong>
            </p>
            <div class="detail-actions d-flex flex-wrap gap-2 mb-2">
              <a href="<%= @initiation.google_maps_url %>" 
                 target="_blank"
                 rel="noopener noreferrer"
                 class="btn btn-sm btn-outline-primary"
                 aria-label="Ouvrir dans Google Maps">
                <i class="bi bi-map me-1" aria-hidden="true"></i>Google Maps
              </a>
              <a href="<%= @initiation.waze_url %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="btn btn-sm btn-outline-info"
                 aria-label="Ouvrir dans Waze">
                <i class="bi bi-compass me-1" aria-hidden="true"></i>Waze
              </a>
            </div>
          </div>
        </div>

        <!-- Colonne 3: Tarif -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-currency-euro" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Tarif</p>
            <p class="detail-value">
              Gratuit (après adhésion 10€)
            </p>
            <% if user_signed_in? && !current_user.memberships.active_now.exists? && !current_user.attendances.where(free_trial_used: true).exists? %>
              <small class="text-muted">
                <i class="bi bi-gift me-1" aria-hidden="true"></i>
                Essai gratuit disponible
              </small>
            <% end %>
          </div>
        </div>

        <!-- Colonne 4: Places -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-people" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Places</p>
            <p class="detail-value">
              <% if @initiation.allow_non_member_discovery? %>
                <%= @initiation.available_member_places %> adhérents / <%= @initiation.available_non_member_places %> découverte
                (<%= @initiation.participants_count %> / <%= @initiation.max_participants %>)
              <% else %>
                <%= @initiation.available_places %> / <%= @initiation.max_participants %>
              <% end %>
            </p>
            <% if @initiation.volunteers_count > 0 %>
              <small class="text-muted">
                + <%= pluralize(@initiation.volunteers_count, "bénévole") %>
              </small>
            <% end %>
          </div>
        </div>
      </section>

      <!-- Zone inscription/annulation -->
      <% if user_signed_in? && (@user_attendance || @child_attendances&.any?) %>
        <!-- Affichage des inscriptions existantes -->
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">
              <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
              Inscriptions confirmées
            </h3>
            
            <!-- Inscription parent -->
            <% if @user_attendance %>
              <div class="alert alert-success mb-3" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <i class="bi bi-person-fill me-2" aria-hidden="true"></i>
                    <strong>Vous êtes inscrit(e)</strong>
                  </div>
                  <%= button_to cancel_attendance_initiation_path(@initiation), 
                      method: :delete, 
                      class: "btn btn-outline-danger btn-sm", 
                      data: { turbo_confirm: 'Annuler votre inscription ? Vous pouvez vous réinscrire plus tard si vous le souhaitez.' },
                      aria: { label: 'Se désinscrire' } do %>
                    <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Inscriptions enfants -->
            <% if @child_attendances&.any? %>
              <% @child_attendances.each do |child_attendance| %>
                <div class="alert alert-info mb-3" role="alert">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <i class="bi bi-person-heart me-2" aria-hidden="true"></i>
                      <strong><%= child_attendance.participant_name %> est inscrit(e)</strong>
                    </div>
                    <%= button_to cancel_attendance_initiation_path(@initiation), 
                        method: :delete, 
                        params: { child_membership_id: child_attendance.child_membership_id },
                        class: "btn btn-outline-danger btn-sm", 
                        data: { turbo_confirm: "Annuler l'inscription de #{child_attendance.participant_name} ?" },
                        aria: { label: "Désinscrire #{child_attendance.participant_name}" } do %>
                      <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Formulaire pour inscrire un enfant supplémentaire -->
            <% if @can_register_child %>
              <div class="mt-4 pt-3 border-top">
                <%= render 'initiations/child_registration_form', initiation: @initiation %>
              </div>
            <% end %>
            
            <!-- Note importante pour les initiations enfants -->
            <% if @child_attendances&.any? %>
              <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                <strong>Important :</strong> Pour les initiations enfants, la présence d'un adulte sur place est obligatoire. 
                L'adulte n'a pas besoin de s'inscrire s'il ne pratique pas.
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Notification rappel globale (uniquement si inscrit) -->
        <% if @user_attendance || @child_attendances&.any? %>
          <% any_reminder_active = (@user_attendance&.wants_reminder? || @child_attendances&.any? { |a| a.wants_reminder? }) %>
          <% if any_reminder_active %>
            <div class="alert alert-info alert-reminder mb-4 border-start border-info border-4" role="alert">
              <div class="d-flex align-items-center justify-content-between">
                <div>
                  <i class="bi bi-bell-fill me-2 text-info" aria-hidden="true"></i>
                  <strong>Rappel activé</strong>
                  <p class="mb-0 small text-muted">Vous recevrez un email la veille à 19h pour vous rappeler la séance.</p>
                </div>
                <%= button_to toggle_reminder_initiation_path(@initiation), method: :patch, 
                    class: "btn btn-outline-secondary btn-sm", 
                    data: { turbo: false },
                    aria: { label: 'Désactiver le rappel' } do %>
                  <i class="bi bi-bell-slash me-1" aria-hidden="true"></i>Désactiver le rappel
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="alert alert-light border border-warning mb-4" role="alert">
              <div class="d-flex align-items-center justify-content-between">
                <div>
                  <i class="bi bi-bell me-2 text-warning" aria-hidden="true"></i>
                  <strong>Rappel désactivé</strong>
                  <p class="mb-0 small text-muted">Activez le rappel pour recevoir un email la veille à 19h.</p>
                </div>
                <%= button_to toggle_reminder_initiation_path(@initiation), method: :patch, 
                    class: "btn btn-outline-primary btn-sm", 
                    data: { turbo: false },
                    aria: { label: 'Activer le rappel' } do %>
                  <i class="bi bi-bell-plus me-1" aria-hidden="true"></i>Activer le rappel
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% elsif @can_register %>
        <%= render 'initiations/registration_form', initiation: @initiation %>
      <% elsif !user_signed_in? %>
        <div class="alert alert-info mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Connexion requise</strong>
          <p class="mb-0">Connectez-vous pour vous inscrire à cette séance d'initiation.</p>
          <div class="mt-3">
            <%= link_to new_user_session_path, class: "btn btn-primary" do %>
              <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>Se connecter
            <% end %>
          </div>
        </div>
      <% elsif @initiation.full? %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
          <strong>Cette séance est complète</strong>
          <p class="mb-0">Toutes les places sont prises. Consultez les autres dates disponibles.</p>
        </div>
      <% else %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Adhésion requise</strong>
          <p class="mb-0">Vous devez avoir une adhésion active ou utiliser votre essai gratuit pour vous inscrire.</p>
          <div class="mt-3">
            <%= link_to new_membership_path(check_age: true), class: "btn btn-primary" do %>
              <i class="bi bi-person-plus me-2" aria-hidden="true"></i>Adhérer maintenant
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Zone description -->
      <div class="event-description mb-4">
        <h2 class="h5 fw-semibold mb-3">
          <i class="bi bi-info-circle me-2 text-liquid-primary" aria-hidden="true"></i>
          À propos
        </h2>
        <div class="text-body" style="line-height: 1.7;">
          <%= simple_format(@initiation.description) %>
        </div>
      </div>

      <!-- Zone actions -->
      <%= render 'shared/event_actions', 
          event: @initiation, 
          user_attendance: @user_attendance, 
          child_attendances: @child_attendances %>
    </div>
  </article>
</section>

<!-- Modal de confirmation de suppression -->
<%= render 'shared/event_delete_modal', event: @initiation %>

