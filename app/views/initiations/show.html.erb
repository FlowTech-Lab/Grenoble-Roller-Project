<% content_for :title, @initiation.title %>
<% content_for :description, "#{@initiation.title} - Cours d'initiation au roller le #{l(@initiation.start_at, format: :long, locale: :fr)} à #{@initiation.location_text}." %>

<section class="container py-4 py-lg-5">
  <article class="card card-liquid event-detail-card shadow-liquid border-0 mx-auto">
    <!-- Hero section -->
    <div class="hero-event-wrapper">
      <div class="hero-image-container">
        <% if @initiation.cover_image.attached? %>
          <%= image_tag(rails_representation_path(@initiation.cover_image_hero), alt: @initiation.title, class: "hero-image", loading: "eager") %>
        <% end %>
        <div class="hero-overlay"></div>
        
        <!-- Badge de date -->
        <div class="position-absolute top-0 end-0 p-3" style="z-index: 10;">
          <span class="badge badge-liquid-primary text-uppercase shadow-sm">
            <i class="bi bi-calendar3 me-1" aria-hidden="true"></i>
            <%= l @initiation.start_at, format: :day_month, locale: :fr %>
          </span>
        </div>
        
        <!-- Informations sur l'image -->
        <div class="hero-content">
          <h1 class="hero-title"><%= @initiation.title %></h1>
          
          <div class="hero-meta">
            <span class="meta-item">
              <i class="bi bi-geo-alt" aria-hidden="true"></i>
              <%= @initiation.location_text %>
            </span>
            <span class="meta-item">
              <i class="bi bi-clock" aria-hidden="true"></i>
              <%= format_event_duration(@initiation) %>
            </span>
          </div>
          
          <div class="hero-badges">
            <% if @initiation.canceled? %>
              <span class="badge bg-danger">
                <i class="bi bi-x-octagon me-1" aria-hidden="true"></i>Annulé
              </span>
            <% end %>
            
            <span class="badge bg-primary">
              <i class="bi bi-people-fill me-1" aria-hidden="true"></i>
              <%= pluralize(@initiation.participants_count, "inscrit") %>
            </span>
            
            <% if @initiation.allow_non_member_discovery? %>
              <!-- Affichage séparé des places si l'option est activée -->
              <% if @initiation.full? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet
                </span>
              <% else %>
                <% if @initiation.available_member_places > 0 %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                    <%= pluralize(@initiation.available_member_places, "place adhérent") %>
                  </span>
                <% else %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet (adhérents)
                  </span>
                <% end %>
                <% if @initiation.available_non_member_places > 0 %>
                  <span class="badge bg-info">
                    <i class="bi bi-gift me-1" aria-hidden="true"></i>
                    <%= pluralize(@initiation.available_non_member_places, "place découverte") %>
                  </span>
                <% else %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet (découverte)
                  </span>
                <% end %>
              <% end %>
            <% else %>
              <!-- Affichage classique si l'option n'est pas activée -->
              <% if @initiation.full? %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Complet
                </span>
              <% elsif @initiation.available_places <= 5 %>
                <span class="badge bg-warning text-dark">
                  <i class="bi bi-exclamation-triangle me-1" aria-hidden="true"></i>
                  <%= pluralize(@initiation.available_places, "place disponible") %>
                </span>
              <% else %>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                  <%= pluralize(@initiation.available_places, "place disponible") %>
                </span>
              <% end %>
            <% end %>
            
            <% if user_signed_in? && @user_attendance %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Vous êtes inscrit(e)
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card-body p-3 p-md-4 p-lg-5">
      <!-- Zone détails (4 colonnes) -->
      <section class="event-details-section mb-4">
        <!-- Colonne 1: Quand -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-calendar-event" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Quand</p>
            <p class="detail-value">
              <strong><%= l @initiation.start_at, format: :event_long, locale: :fr %></strong>
            </p>
          </div>
        </div>

        <!-- Colonne 2: Rendez-vous -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-geo-alt-fill text-success" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Rendez-vous</p>
            <p class="detail-value mb-2">
              <strong><%= @initiation.location_text %></strong>
            </p>
            <div class="detail-actions d-flex flex-wrap gap-2 mb-2">
              <a href="<%= @initiation.google_maps_url %>" 
                 target="_blank"
                 rel="noopener noreferrer"
                 class="btn btn-sm btn-outline-primary"
                 aria-label="Ouvrir dans Google Maps">
                <i class="bi bi-map me-1" aria-hidden="true"></i>Google Maps
              </a>
              <a href="<%= @initiation.waze_url %>"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="btn btn-sm btn-outline-info"
                 aria-label="Ouvrir dans Waze">
                <i class="bi bi-compass me-1" aria-hidden="true"></i>Waze
              </a>
            </div>
          </div>
        </div>

        <!-- Colonne 3: Tarif -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-currency-euro" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Tarif</p>
            <p class="detail-value">
              Gratuit (après adhésion 10€)
            </p>
            <% if user_signed_in? && !current_user.memberships.active_now.exists? && !current_user.attendances.active.where(free_trial_used: true).exists? %>
              <small class="text-muted">
                <i class="bi bi-gift me-1" aria-hidden="true"></i>
                Essai gratuit disponible
              </small>
            <% end %>
          </div>
        </div>

        <!-- Colonne 4: Places -->
        <div class="detail-column">
          <div class="detail-icon">
            <i class="bi bi-people" aria-hidden="true"></i>
          </div>
          <div class="detail-content">
            <p class="detail-label">Places</p>
            <p class="detail-value">
              <% if @initiation.allow_non_member_discovery? %>
                <%= @initiation.available_member_places %> adhérents / <%= @initiation.available_non_member_places %> découverte
                (<%= @initiation.participants_count %> / <%= @initiation.max_participants %>)
              <% else %>
                <%= @initiation.available_places %> / <%= @initiation.max_participants %>
              <% end %>
            </p>
            <% if @initiation.volunteers_count > 0 %>
              <small class="text-muted">
                + <%= pluralize(@initiation.volunteers_count, "bénévole") %>
              </small>
            <% end %>
          </div>
        </div>
      </section>

      <!-- Zone inscription/annulation -->
      <% if user_signed_in? && (@user_attendance || @child_attendances&.any?) %>
        <!-- Affichage des inscriptions existantes -->
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">
              <i class="bi bi-check-circle text-success me-2" aria-hidden="true"></i>
              Inscriptions confirmées
            </h3>
            
            <!-- Inscription parent -->
            <% if @user_attendance %>
              <div class="alert alert-success mb-3" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <i class="bi bi-person-fill me-2" aria-hidden="true"></i>
                    <strong>Vous êtes inscrit(e)</strong>
                  </div>
                  <%= button_to cancel_attendance_event_path_for(@initiation, @user_attendance), 
                      method: :delete, 
                      class: "btn btn-outline-danger btn-sm", 
                      data: { turbo_confirm: 'Annuler votre inscription ? Vous pouvez vous réinscrire plus tard si vous le souhaitez.' },
                      aria: { label: 'Se désinscrire' } do %>
                    <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Inscriptions enfants -->
            <% if @child_attendances&.any? %>
              <% @child_attendances.each do |child_attendance| %>
                <div class="alert alert-info mb-3" role="alert">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <i class="bi bi-person-heart me-2" aria-hidden="true"></i>
                      <strong><%= child_attendance.participant_name %> est inscrit(e)</strong>
                    </div>
                    <%= button_to cancel_attendance_event_path_for(@initiation, child_attendance), 
                        method: :delete, 
                        params: { child_membership_id: child_attendance.child_membership_id },
                        class: "btn btn-outline-danger btn-sm", 
                        data: { turbo_confirm: "Annuler l'inscription de #{child_attendance.participant_name} ?" },
                        aria: { label: "Désinscrire #{child_attendance.participant_name}" } do %>
                      <i class="bi bi-calendar-x me-1" aria-hidden="true"></i>Annuler
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>

            <!-- Note importante pour les initiations enfants -->
            <% if @child_attendances&.any? %>
              <div class="alert alert-warning mt-3" role="alert">
                <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                <strong>Important :</strong> Pour les initiations enfants, la présence d'un adulte sur place est obligatoire. 
                L'adulte n'a pas besoin de s'inscrire s'il ne pratique pas.
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Zone liste d'attente (affichée indépendamment des inscriptions confirmées) -->
      <% if user_signed_in? && (@user_waitlist_entry || @child_waitlist_entries&.any?) %>
        <div class="card card-liquid shadow-sm mb-4">
          <div class="card-body p-4">
            <h3 class="h5 mb-3">
              <i class="bi bi-hourglass-split text-warning me-2" aria-hidden="true"></i>
              En liste d'attente
            </h3>
            
            <!-- Parent en liste d'attente -->
            <% if @user_waitlist_entry %>
              <div class="alert alert-warning mb-3" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                  <div>
                    <i class="bi bi-person-fill me-2" aria-hidden="true"></i>
                    <strong>Vous êtes en liste d'attente</strong>
                    <% if @user_waitlist_entry.notified? %>
                      <span class="badge bg-info ms-2">
                        <i class="bi bi-bell-fill me-1" aria-hidden="true"></i>Place disponible
                      </span>
                    <% else %>
                      <span class="badge bg-secondary ms-2">
                        Position #<%= @user_waitlist_entry.position + 1 %>
                      </span>
                    <% end %>
                  </div>
                  <%= button_to waitlist_entry_path(@user_waitlist_entry), 
                      method: :delete, 
                      class: "btn btn-outline-danger btn-sm", 
                      data: { turbo_confirm: 'Quitter la liste d\'attente ?' },
                      aria: { label: 'Quitter la liste d\'attente' } do %>
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Quitter la file
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Enfants en liste d'attente -->
            <% if @child_waitlist_entries&.any? %>
              <% @child_waitlist_entries.each do |waitlist_entry| %>
                <div class="alert alert-warning mb-3" role="alert">
                  <div class="d-flex align-items-center justify-content-between">
                    <div>
                      <i class="bi bi-person-heart me-2" aria-hidden="true"></i>
                      <strong><%= waitlist_entry.participant_name %> est en liste d'attente</strong>
                      <% if waitlist_entry.notified? %>
                        <span class="badge bg-info ms-2">
                          <i class="bi bi-bell-fill me-1" aria-hidden="true"></i>Place disponible
                        </span>
                      <% else %>
                        <span class="badge bg-secondary ms-2">
                          Position #<%= waitlist_entry.position + 1 %>
                        </span>
                      <% end %>
                    </div>
                    <%= button_to waitlist_entry_path(waitlist_entry), 
                        method: :delete, 
                        params: { child_membership_id: waitlist_entry.child_membership_id },
                        class: "btn btn-outline-danger btn-sm", 
                        data: { turbo_confirm: "Quitter la liste d'attente pour #{waitlist_entry.participant_name} ?" },
                        aria: { label: "Quitter la liste d'attente pour #{waitlist_entry.participant_name}" } do %>
                      <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Quitter la file
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      
      <!-- Bouton d'inscription (affiché seulement si on peut vraiment s'inscrire) -->
      <% 
        # Calculer si on peut vraiment s'inscrire (adulte ou enfant disponible)
        can_register_adult = @can_register && !@user_attendance&.persisted?
        # Pour les initiations, inclure aussi trial (essai gratuit) et pending (en attente)
        can_register_any_child = @can_register_child && current_user.memberships.where(is_child_membership: true)
          .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
          .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
        show_register_button = (can_register_adult || can_register_any_child) && !@initiation.full?
      %>
      <% if show_register_button %>
        <div class="primary-action">
          <button type="button" 
                  class="btn btn-liquid-primary btn-lg w-100" 
                  data-bs-toggle="modal" 
                  data-bs-target="#confirmAttendModalShowInitiation"
                  aria-label="S'inscrire à cette initiation">
            <i class="bi bi-calendar-plus me-2" aria-hidden="true"></i>Inscription
          </button>
        </div>
      <% elsif !user_signed_in? %>
        <div class="alert alert-info mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Connexion requise</strong>
          <p class="mb-0">Connectez-vous pour vous inscrire à cette séance d'initiation.</p>
          <div class="mt-3">
            <%= link_to new_user_session_path, class: "btn btn-primary" do %>
              <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>Se connecter
            <% end %>
          </div>
        </div>
      <% elsif @initiation.full? %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
          <strong>Cette séance est complète</strong>
          <p class="mb-0">Toutes les places sont prises. Rejoignez la liste d'attente pour être notifié(e) si une place se libère.</p>
          <% if user_signed_in? %>
            <div class="mt-3 d-flex flex-wrap gap-2">
              <%# Bouton pour rejoindre la liste d'attente : toujours disponible %>
              <button type="button" 
                      class="btn btn-liquid-primary" 
                      data-bs-toggle="modal" 
                      data-bs-target="#joinWaitlistModalShowInitiation"
                      aria-label="Rejoindre la liste d'attente">
                <i class="bi bi-person-plus me-2" aria-hidden="true"></i>Rejoindre la liste d'attente
              </button>
              
              <%# Bouton pour inscrire un enfant si disponible %>
              <% has_available_children = @can_register_child && current_user.memberships.where(is_child_membership: true)
                  .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
                  .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists? %>
              <% if has_available_children %>
                <button type="button" 
                        class="btn btn-outline-primary" 
                        data-bs-toggle="modal" 
                        data-bs-target="#confirmAttendModalShowInitiation"
                        aria-label="Inscrire un enfant">
                  <i class="bi bi-person-heart me-2" aria-hidden="true"></i>Inscrire un enfant
                </button>
              <% end %>
            </div>
          <% end %>
        </div>
      <% elsif user_signed_in? && !current_user.memberships.active_now.exists? && current_user.attendances.active.where(free_trial_used: true).exists? %>
        <%# Afficher seulement si l'utilisateur n'a PAS d'adhésion active ET a déjà utilisé son essai gratuit %>
        <div class="alert alert-warning mb-4" role="alert">
          <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
          <strong>Adhésion requise</strong>
          <p class="mb-0">Vous devez avoir une adhésion active ou utiliser votre essai gratuit pour vous inscrire.</p>
          <div class="mt-3">
            <%= link_to new_membership_path(type: 'adult'), class: "btn btn-primary" do %>
              <i class="bi bi-person-plus me-2" aria-hidden="true"></i>Adhérer maintenant
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Zone description -->
      <div class="event-description mb-4">
        <h2 class="h5 fw-semibold mb-3">
          <i class="bi bi-info-circle me-2 text-liquid-primary" aria-hidden="true"></i>
          À propos
        </h2>
        <div class="text-body" style="line-height: 1.7;">
          <%= simple_format(@initiation.description) %>
        </div>
      </div>

      <!-- Zone actions -->
      <%= render 'shared/event_actions', 
          event: @initiation, 
          user_attendance: @user_attendance, 
          child_attendances: @child_attendances %>
    </div>
  </article>
</section>

<!-- Modal de confirmation d'inscription -->
<% 
  # Vérifier si on peut inscrire un enfant même si l'événement est complet
  can_register_child_when_full = @initiation.full? && user_signed_in? && @can_register_child && 
    current_user.memberships.where(is_child_membership: true)
      .where(status: [Membership.statuses[:active], Membership.statuses[:trial], Membership.statuses[:pending]])
      .where.not(id: @child_attendances.map(&:child_membership_id).compact).exists?
%>
<% if show_register_button || can_register_child_when_full %>
  <div class="modal fade" id="confirmAttendModalShowInitiation" tabindex="-1" aria-labelledby="confirmAttendModalShowInitiationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="confirmAttendModalShowInitiationLabel">
            <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>Confirmer votre inscription
          </h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <%= form_with url: attend_event_path_for(@initiation), method: :post, local: true, data: { turbo: false }, id: "attendFormShowInitiation", class: "attend-form" do |f| %>
          <div class="modal-body">
            <%= render 'shared/registration_form_fields', 
                form: f, 
                event: @initiation, 
                prefix_id: "_show_initiation", 
                show_alert: true, 
                show_summary: true,
                user_attendance: @user_attendance,
                child_attendances: @child_attendances %>

            <!-- Bouton Ajouter au calendrier -->
            <div class="mb-3 text-center">
              <%= link_to initiation_path(@initiation, format: :ics), 
                  class: "btn btn-outline-primary btn-sm w-100", 
                  title: 'Ajouter au calendrier',
                  aria: { label: 'Ajouter au calendrier' } do %>
                <i class="bi bi-calendar-event me-2" aria-hidden="true"></i>Ajouter à mon calendrier
              <% end %>
            </div>
            
            <p class="text-muted small mb-0">
              <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
              Vous recevrez une confirmation par email et pourrez annuler votre inscription à tout moment.
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" id="cancelBtnShowInitiation">Annuler</button>
            <%= f.submit "Confirmer l'inscription", class: "btn btn-liquid-primary", id: "submitBtnShowInitiation", data: { bs_dismiss: "modal" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal pour rejoindre la liste d'attente -->
<% if user_signed_in? && @initiation.full? %>
  <div class="modal fade" id="joinWaitlistModalShowInitiation" tabindex="-1" aria-labelledby="joinWaitlistModalShowInitiationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title h5" id="joinWaitlistModalShowInitiationLabel">
            <i class="bi bi-hourglass-split me-2" aria-hidden="true"></i>Rejoindre la liste d'attente
          </h2>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
        </div>
        <%= form_with url: join_waitlist_event_path_for(@initiation), method: :post, local: true, data: { turbo: false }, id: "joinWaitlistFormShowInitiation" do |f| %>
          <div class="modal-body">
            <p class="mb-3">
              Cette séance est complète. Rejoignez la liste d'attente pour être notifié(e) si une place se libère.
            </p>
            
            <%= render 'shared/registration_form_fields', 
                form: f, 
                event: @initiation, 
                prefix_id: "_waitlist_show_initiation", 
                show_alert: false, 
                show_summary: false,
                user_attendance: @user_attendance,
                child_attendances: @child_attendances,
                is_waitlist: true %>
            
            <div class="alert alert-info mb-0" role="alert">
              <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
              <small>Vous recevrez un email si une place se libère. Vous aurez 24 heures pour confirmer votre inscription.</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= f.submit "Rejoindre la liste d'attente", class: "btn btn-liquid-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal de confirmation de suppression -->
<%= render 'shared/event_delete_modal', event: @initiation %>

