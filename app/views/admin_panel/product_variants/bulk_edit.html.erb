<% 
  breadcrumb_items = [
    { label: "Produits", url: admin_panel_products_path },
    { label: @product.name, url: admin_panel_product_path(@product) },
    { label: "Variantes", url: admin_panel_product_product_variants_path(@product) },
    { label: "Édition en masse", url: nil }
  ]
%>

<%= render 'admin_panel/shared/breadcrumb', breadcrumb_items: breadcrumb_items %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-2">Édition en masse</h1>
    <p class="text-muted mb-0">
      <i class="bi bi-list-check me-1" aria-hidden="true"></i>
      <%= pluralize(@variants.count, "variante sélectionnée", "variantes sélectionnées") %>
    </p>
  </div>
  <%= link_to admin_panel_product_product_variants_path(@product), 
      class: "btn btn-outline-secondary" do %>
    <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>
    Retour
  <% end %>
</div>

<%= form_with url: bulk_update_admin_panel_product_product_variants_path(@product), 
    method: :patch, 
    local: true,
    class: "bulk-edit-form" do |f| %>
  
  <!-- Variantes sélectionnées -->
  <div class="card card-liquid mb-4">
    <div class="card-header card-liquid-primary">
      <h5 class="mb-0">
        <i class="bi bi-list-ul me-2" aria-hidden="true"></i>
        Variantes sélectionnées
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>SKU</th>
              <th>Options</th>
              <th>Prix actuel (€)</th>
              <th>Stock actuel</th>
              <th>Statut actuel</th>
            </tr>
          </thead>
          <tbody>
            <% @variants.each do |variant| %>
              <tr>
                <td><code><%= variant.sku %></code></td>
                <td>
                  <% if variant.option_values.any? %>
                    <%= variant.option_values.map(&:name).join(", ") %>
                  <% else %>
                    <span class="text-muted">Aucune</span>
                  <% end %>
                </td>
                <td><%= number_to_currency(variant.price_cents / 100.0, unit: "€", separator: ",", delimiter: " ") %></td>
                <td>
                  <span class="badge <%= variant.inventory&.available_qty.to_i > 0 ? 'badge-liquid-success' : 'badge-liquid-danger' %>">
                    <%= variant.inventory&.available_qty || 0 %> / <%= variant.inventory&.stock_qty || 0 %>
                  </span>
                </td>
                <td>
                  <% if variant.is_active? %>
                    <span class="badge badge-liquid-success">Actif</span>
                  <% else %>
                    <span class="badge badge-liquid-secondary">Inactif</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Formulaire d'édition -->
  <div class="card card-liquid">
    <div class="card-header card-liquid-primary">
      <h5 class="mb-0">
        <i class="bi bi-pencil-square me-2" aria-hidden="true"></i>
        Modifications à appliquer
      </h5>
    </div>
    <div class="card-body">
      <!-- IDs des variantes (hidden) -->
      <% @variants.each do |variant| %>
        <%= hidden_field_tag "variant_ids[]", variant.id %>
      <% end %>

      <div class="row g-3">
        <!-- Prix -->
        <div class="col-md-6">
          <label class="form-label">
            <i class="bi bi-currency-euro me-1" aria-hidden="true"></i>
            Nouveau prix (€)
          </label>
          <div class="input-group">
            <%= number_field_tag "price_cents", nil, 
                class: "form-control form-control-liquid",
                placeholder: "Laisser vide pour ne pas modifier",
                step: 0.01,
                min: 0 %>
            <span class="input-group-text">€</span>
          </div>
          <small class="form-text text-muted">
            Prix en euros. Laisser vide pour conserver les prix actuels.
          </small>
        </div>

        <!-- Stock -->
        <div class="col-md-6">
          <label class="form-label">
            <i class="bi bi-box-seam me-1" aria-hidden="true"></i>
            Nouveau stock
          </label>
          <%= number_field_tag "stock_qty", nil,
              class: "form-control form-control-liquid",
              placeholder: "Laisser vide pour ne pas modifier",
              step: 1,
              min: 0 %>
          <small class="form-text text-muted">
            Quantité en stock. Laisser vide pour conserver les stocks actuels.
          </small>
        </div>

        <!-- Statut -->
        <div class="col-md-12">
          <label class="form-label">
            <i class="bi bi-toggle-on me-1" aria-hidden="true"></i>
            Statut
          </label>
          <div class="form-check">
            <%= radio_button_tag "is_active", "1", false, class: "form-check-input", id: "is_active_1" %>
            <label class="form-check-label" for="is_active_1">
              Activer toutes les variantes
            </label>
          </div>
          <div class="form-check">
            <%= radio_button_tag "is_active", "0", false, class: "form-check-input", id: "is_active_0" %>
            <label class="form-check-label" for="is_active_0">
              Désactiver toutes les variantes
            </label>
          </div>
          <div class="form-check">
            <%= radio_button_tag "is_active", "", true, class: "form-check-input", id: "is_active_none" %>
            <label class="form-check-label" for="is_active_none">
              Ne pas modifier le statut
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer bg-transparent border-top">
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted">
          <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
          Seuls les champs remplis seront modifiés. Les autres resteront inchangés.
        </small>
        <div class="btn-group">
          <%= link_to admin_panel_product_product_variants_path(@product), 
              class: "btn btn-outline-secondary" do %>
            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
            Annuler
          <% end %>
          <%= f.submit "Appliquer les modifications", 
              class: "btn btn-liquid-primary",
              data: { 
                turbo_confirm: "Êtes-vous sûr de vouloir modifier #{pluralize(@variants.count, 'cette variante', 'ces variantes')} ?" 
              } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
