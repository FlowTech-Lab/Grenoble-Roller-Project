<% 
  breadcrumb_items = [
    { label: "Produits", url: admin_panel_products_path },
    { label: @product.name, url: nil }
  ]
%>

<%= render 'admin_panel/shared/breadcrumb', breadcrumb_items: breadcrumb_items %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @product.name %></h1>
  <div class="btn-group">
    <%= link_to "Modifier", edit_admin_panel_product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Retour", admin_panel_products_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="row">
  <!-- Informations principales -->
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Informations</h5>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">ID</dt>
          <dd class="col-sm-9"><%= @product.id %></dd>

          <dt class="col-sm-3">Nom</dt>
          <dd class="col-sm-9"><strong><%= @product.name %></strong></dd>

          <dt class="col-sm-3">Référence URL</dt>
          <dd class="col-sm-9"><code><%= @product.slug %></code></dd>

          <dt class="col-sm-3">Catégorie</dt>
          <dd class="col-sm-9"><%= @product.category&.name || "-" %></dd>

          <dt class="col-sm-3">Description</dt>
          <dd class="col-sm-9"><%= @product.description.presence || "-" %></dd>

          <dt class="col-sm-3">Prix de base</dt>
          <dd class="col-sm-9"><%= price_display(@product.price_cents, @product.currency) %></dd>

          <dt class="col-sm-3">Stock total</dt>
          <dd class="col-sm-9"><%= @product.stock_qty || 0 %></dd>

          <dt class="col-sm-3">Statut</dt>
          <dd class="col-sm-9"><%= active_badge(@product.is_active) %></dd>

          <dt class="col-sm-3">Créé le</dt>
          <dd class="col-sm-9"><%= @product.created_at.strftime("%d/%m/%Y à %H:%M") %></dd>
        </dl>
      </div>
    </div>
  </div>

  <!-- Image -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Image</h5>
      </div>
      <div class="card-body text-center">
        <% if @product.image.attached? %>
          <%= image_tag @product.image, class: "img-fluid rounded", style: "max-height: 300px;" %>
        <% elsif @product.image_url.present? %>
          <%= image_tag @product.image_url, class: "img-fluid rounded", style: "max-height: 300px;", onerror: "this.style.display='none';" %>
        <% else %>
          <p class="text-muted">Aucune image</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Variantes -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Variantes (<%= @product.product_variants.count %>)</h5>
    <%= link_to "+ Ajouter variante", 
        new_admin_panel_product_product_variant_path(@product),
        class: 'btn btn-sm btn-primary' %>
  </div>

  <% if @variants.any? %>
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>SKU</th>
            <th>Options</th>
            <th>Prix</th>
            <th>Stock</th>
            <th>Statut</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @variants.each do |variant| %>
            <tr>
              <td><code><%= variant.sku %></code></td>
              <td>
                <% variant.option_values.each do |ov| %>
                  <span class="badge bg-light text-dark me-1">
                    <%= "#{ov.option_type.presentation || ov.option_type.name}: #{ov.presentation || ov.value}" %>
                  </span>
                <% end %>
                <% if variant.option_values.empty? %>
                  <span class="text-muted">Aucune option</span>
                <% end %>
              </td>
              <td><%= price_display(variant.price_cents, variant.currency) %></td>
              <td>
                <% if variant.stock_qty > 0 %>
                  <span class="badge bg-success"><%= variant.stock_qty %></span>
                <% else %>
                  <span class="badge bg-danger">0</span>
                <% end %>
              </td>
              <td>
                <% if variant.is_active %>
                  <span class="badge bg-success">Actif</span>
                <% else %>
                  <span class="badge bg-secondary">Inactif</span>
                <% end %>
              </td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_admin_panel_product_product_variant_path(@product, variant),
                      class: 'btn btn-outline-warning' do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to admin_panel_product_product_variant_path(@product, variant),
                      method: :delete, data: { confirm: 'Confirmer ?' },
                      class: 'btn btn-outline-danger' do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- PAGINATION VARIANTES -->
    <% if @variant_pages.pages > 1 %>
      <nav class="p-3">
        <%= render 'admin_panel/shared/pagination', pagy: @variant_pages %>
      </nav>
    <% end %>
  <% else %>
    <div class="card-body">
      <div class="alert alert-info mb-0">
        Aucune variante. <%= link_to 'Créer la première', 
            new_admin_panel_product_product_variant_path(@product) %>
      </div>
    </div>
  <% end %>
</div>
