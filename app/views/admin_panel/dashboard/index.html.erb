<div class="admin-dashboard">
  <!-- HEADER -->
  <div class="mb-4">
    <h1>Dashboard Admin</h1>
    <p class="text-muted">Bienvenue, <%= current_user.first_name || current_user.email %></p>
  </div>

  <!-- MODE MAINTENANCE (Admin uniquement - en haut pour visibilit√©) -->
  <% if @can_toggle_maintenance %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card card-liquid rounded-liquid shadow-liquid <%= @maintenance_enabled ? 'border-danger' : 'border-warning' %>">
          <div class="card-body py-3">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
              <div class="d-flex align-items-center gap-2">
                <span class="fs-5"><%= @maintenance_enabled ? 'üîí' : '‚öôÔ∏è' %></span>
                <div>
                  <strong class="<%= @maintenance_enabled ? 'text-danger' : 'text-warning' %>">
                    Mode Maintenance <%= @maintenance_enabled ? 'ACTIF' : 'INACTIF' %>
                  </strong>
                  <small class="text-muted d-block">
                    <%= @maintenance_enabled ? 'Les visiteurs non connect√©s voient la page de maintenance' : 'Tous les utilisateurs peuvent acc√©der au site' %>
                  </small>
                </div>
              </div>
              <% if @maintenance_enabled %>
                <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDisableMaintenanceModal">
                  D√©sactiver ‚úì
                </button>
              <% else %>
                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmEnableMaintenanceModal">
                  Activer üîí
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal de confirmation pour activer le mode maintenance -->
    <div class="modal fade" id="confirmEnableMaintenanceModal" tabindex="-1" aria-labelledby="confirmEnableMaintenanceModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h2 class="modal-title h5" id="confirmEnableMaintenanceModalLabel">
              <i class="bi bi-exclamation-triangle me-2"></i>Activer le mode maintenance
            </h2>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-warning mb-3">
              <strong>‚ö†Ô∏è Attention :</strong> Cette action va bloquer l'acc√®s au site pour tous les utilisateurs non administrateurs.
            </div>
            <p class="mb-2">
              En activant le mode maintenance :
            </p>
            <ul class="mb-0">
              <li>Tous les visiteurs non connect√©s verront la page de maintenance</li>
              <li>Seuls les administrateurs (ADMIN/SUPERADMIN, level >= 60) pourront acc√©der au site</li>
              <li>Les utilisateurs non administrateurs seront bloqu√©s</li>
            </ul>
            <p class="mt-3 mb-0 text-muted">
              <strong>√ätes-vous s√ªr de vouloir activer le mode maintenance ?</strong>
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= form_with url: toggle_admin_panel_maintenance_path, method: :patch, local: true, class: "d-inline" do |f| %>
              <%= f.submit "Oui, activer le mode maintenance", class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal de confirmation pour d√©sactiver le mode maintenance -->
    <div class="modal fade" id="confirmDisableMaintenanceModal" tabindex="-1" aria-labelledby="confirmDisableMaintenanceModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-success text-white">
            <h2 class="modal-title h5" id="confirmDisableMaintenanceModalLabel">
              <i class="bi bi-check-circle me-2"></i>D√©sactiver le mode maintenance
            </h2>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
          </div>
          <div class="modal-body">
            <div class="alert alert-info mb-3">
              <strong>‚ÑπÔ∏è Information :</strong> Cette action va r√©tablir l'acc√®s normal au site pour tous les utilisateurs.
            </div>
            <p class="mb-2">
              En d√©sactivant le mode maintenance :
            </p>
            <ul class="mb-0">
              <li>Tous les utilisateurs pourront √† nouveau acc√©der au site</li>
              <li>La page de maintenance ne sera plus affich√©e</li>
              <li>Le site fonctionnera normalement</li>
            </ul>
            <p class="mt-3 mb-0 text-muted">
              <strong>√ätes-vous s√ªr de vouloir d√©sactiver le mode maintenance ?</strong>
            </p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
            <%= form_with url: toggle_admin_panel_maintenance_path, method: :patch, local: true, class: "d-inline" do |f| %>
              <%= f.submit "Oui, d√©sactiver le mode maintenance", class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- KPIs PRINCIPAUX (8 cartes Liquid Glass) -->
  <div class="row g-3 mb-4">
    <!-- Utilisateurs -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body">
          <h5 class="card-title text-muted">Utilisateurs</h5>
          <h3 class="mb-0"><%= @stats[:total_users] %></h3>
        </div>
      </div>
    </div>

    <!-- Produits -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body">
          <h5 class="card-title text-muted">Produits</h5>
          <h3 class="mb-0"><%= @stats[:total_products] %></h3>
          <small class="text-muted"><%= @stats[:active_products] %> actifs</small>
        </div>
      </div>
    </div>

    <!-- Commandes -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body">
          <h5 class="card-title text-muted">Commandes</h5>
          <h3 class="mb-0"><%= @stats[:total_orders] %></h3>
          <small class="text-muted"><%= @stats[:pending_orders] %> en attente</small>
        </div>
      </div>
    </div>

    <!-- CA Total -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body">
          <h5 class="card-title text-muted">CA Total</h5>
          <h3 class="mb-0"><%= number_to_currency(@stats[:total_revenue], unit: '‚Ç¨', precision: 0) %></h3>
          <small class="text-muted">Commandes pay√©es/exp√©di√©es</small>
        </div>
      </div>
    </div>

    <!-- Stock Faible -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid border-warning">
        <div class="card-body">
          <h5 class="card-title text-warning">‚ö†Ô∏è Stock Faible</h5>
          <h3 class="mb-0 text-warning"><%= @low_stock_count %></h3>
          <small class="text-muted">&lt; 10 unit√©s</small>
        </div>
      </div>
    </div>

    <!-- Rupture Stock -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid border-danger">
        <div class="card-body">
          <h5 class="card-title text-danger">üî¥ Rupture</h5>
          <h3 class="mb-0 text-danger"><%= @out_of_stock_count %></h3>
          <small class="text-muted">0 unit√© disponible</small>
        </div>
      </div>
    </div>

    <!-- Initiations √† venir -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-body">
          <h5 class="card-title text-muted">Initiations</h5>
          <h3 class="mb-0"><%= @upcoming_initiations.count %></h3>
          <small class="text-muted">√Ä venir</small>
        </div>
      </div>
    </div>

    <!-- Commandes Pay√©es -->
    <div class="col-md-6 col-lg-3">
      <div class="card card-liquid rounded-liquid shadow-liquid border-success">
        <div class="card-body">
          <h5 class="card-title text-success">‚úÖ Pay√©es</h5>
          <h3 class="mb-0 text-success"><%= @stats[:paid_orders] %></h3>
          <small class="text-muted">En pr√©paration</small>
        </div>
      </div>
    </div>
  </div>

  <!-- GRAPHIQUE VENTES (7 derniers jours) -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-header">
          <h5 class="mb-0">Ventes (7 derniers jours)</h5>
        </div>
        <div class="card-body">
          <div class="chart-container" style="height: 200px;">
            <% if @sales_by_day.any? && @sales_by_day.values.max > 0 %>
              <div class="d-flex align-items-end justify-content-between" style="height: 100%; gap: 4px;">
                <% @sales_by_day.each do |date, amount| %>
                  <div class="flex-fill d-flex flex-column align-items-center" style="max-width: calc(100% / <%= @sales_by_day.count %>);">
                    <div class="bg-primary rounded-top w-100" style="height: <%= (amount / @sales_by_day.values.max * 100) %>%; min-height: 4px; transition: height 0.3s ease;"></div>
                    <small class="text-muted mt-2 text-center" style="font-size: 0.7rem;"><%= date.strftime('%d/%m') %></small>
                    <small class="text-muted text-center" style="font-size: 0.65rem;"><%= number_to_currency(amount, unit: '‚Ç¨', format: '%n', precision: 0) %></small>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted text-center py-4">Aucune vente sur les 7 derniers jours</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- DEUX COLONNES : Commandes R√©centes + Initiations √† Venir -->
  <div class="row g-4">
    <!-- Commandes R√©centes -->
    <div class="col-lg-8">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Commandes R√©centes</h5>
          <%= link_to 'Voir toutes', admin_panel_orders_path, class: 'btn btn-sm btn-outline-primary' %>
        </div>
        <div class="card-body">
          <% if @recent_orders.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Client</th>
                    <th>Total</th>
                    <th>Statut</th>
                    <th>Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_orders.each do |order| %>
                    <tr>
                      <td data-label="ID">#<%= order.id %></td>
                      <td data-label="Client"><%= order.user.email %></td>
                      <td data-label="Total"><%= number_to_currency(order.total_cents / 100.0, unit: '‚Ç¨', separator: ',', delimiter: ' ') %></td>
                      <td data-label="Statut">
                        <span class="badge badge-liquid-<%= case order.status
                          when 'paid' then 'success'
                          when 'pending' then 'warning'
                          when 'shipped' then 'info'
                          when 'cancelled' then 'danger'
                          else 'secondary'
                        end %>">
                          <%= order.status %>
                        </span>
                      </td>
                      <td data-label="Date"><%= order.created_at.strftime('%d/%m/%Y %H:%M') %></td>
                      <td data-label="Actions">
                        <%= link_to 'Voir', admin_panel_order_path(order), class: 'btn btn-sm btn-outline-primary' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted text-center py-4">Aucune commande r√©cente</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Initiations √† Venir -->
    <div class="col-lg-4">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Initiations √† Venir</h5>
          <%= link_to 'Voir toutes', admin_panel_initiations_path, class: 'btn btn-sm btn-outline-primary' %>
        </div>
        <div class="card-body">
          <% if @upcoming_initiations.any? %>
            <div class="list-group list-group-flush">
              <% @upcoming_initiations.each do |initiation| %>
                <div class="list-group-item px-0">
                  <h6 class="mb-1"><%= initiation.title %></h6>
                  <small class="text-muted">
                    <%= l(initiation.start_at, format: :short) %>
                  </small>
                  <div class="mt-2">
                    <span class="badge bg-info">
                      <%= initiation.participants_count %> / <%= initiation.max_participants %>
                    </span>
                    <% if initiation.volunteers_count > 0 %>
                      <span class="badge bg-success">
                        <%= initiation.volunteers_count %> b√©n√©voles
                      </span>
                    <% end %>
                  </div>
                  <%= link_to 'Voir', admin_panel_initiation_path(initiation), class: 'btn btn-sm btn-outline-primary mt-2' %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted text-center py-4">Aucune initiation √† venir</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- ACTIONS RAPIDES -->
  <div class="row mt-4">
    <div class="col-12">
      <div class="card card-liquid rounded-liquid shadow-liquid">
        <div class="card-header">
          <h5 class="mb-0">Actions Rapides</h5>
        </div>
        <div class="card-body">
          <div class="btn-group flex-wrap" role="group">
            <%= link_to '+ Produit', new_admin_panel_product_path, class: 'btn btn-primary' %>
            <%= link_to 'Inventaire', admin_panel_inventory_path, class: 'btn btn-outline-primary' %>
            <%= link_to 'Commandes', admin_panel_orders_path, class: 'btn btn-outline-primary' %>
            <%= link_to 'Initiations', admin_panel_initiations_path, class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

