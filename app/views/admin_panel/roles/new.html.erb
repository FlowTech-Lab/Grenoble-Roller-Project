<% 
  breadcrumb_items = [
    { label: "Rôles", url: admin_panel_roles_path },
    { label: "Nouveau rôle", url: nil }
  ]
%>

<%= render 'admin_panel/shared/breadcrumb', breadcrumb_items: breadcrumb_items %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Nouveau rôle</h1>
  <%= link_to "Retour", admin_panel_roles_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card card-liquid rounded-liquid shadow-liquid">
      <div class="card-body">
        <%= form_with model: [:admin_panel, @role], local: true do |f| %>
          <% if @role.errors.any? %>
            <div class="alert alert-danger">
              <h5>Erreurs:</h5>
              <ul class="mb-0">
                <% @role.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "Nom *", class: "form-label" %>
            <%= f.text_field :name, class: "form-control form-control-liquid", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :code, "Code *", class: "form-label" %>
            <%= f.text_field :code, class: "form-control form-control-liquid", required: true %>
            <small class="text-muted">Code unique (ex: ADMIN, USER, etc.)</small>
          </div>

          <div class="mb-3">
            <%= f.label :level, "Level *", class: "form-label" %>
            <%= f.number_field :level, class: "form-control form-control-liquid", required: true, min: 0, max: 100 %>
            <small class="text-muted">Niveau de permission (0-100)</small>
          </div>

          <div class="mb-3">
            <%= f.label :description, "Description", class: "form-label" %>
            <%= f.text_area :description, class: "form-control form-control-liquid", rows: 3 %>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Créer", class: "btn btn-liquid-primary" %>
            <%= link_to "Annuler", admin_panel_roles_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
