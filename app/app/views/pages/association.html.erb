<!-- ========================================
     HERO SECTION - ELEMENT PRESENTATION
     Image au milieu, texte de chaque côté
     ======================================== -->
<section>
  <div class="container">
    <div class="element-presentation">
      <div class="row align-items-center g-4 g-lg-5">
        <!-- Texte gauche -->
        <div class="col-12 col-lg-4 col-xl-5">
          <div class="element-content text-center text-lg-end">
            <span class="element-badge badge badge-liquid-primary mb-3">
              <i class="bi bi-heart me-1"></i>
              Notre histoire
            </span>
            <h1 class="element-title mb-3 display-4 fw-bold">
              Grenoble Roller
            </h1>
            <p class="element-text lead mb-4">
              Une communauté passionnée depuis plus de 15 ans
            </p>
          </div>
        </div>
        
        <!-- Image au milieu -->
        <div class="col-12 col-lg-4 col-xl-2 text-center d-flex align-items-center justify-content-center">
          <div class="element-image rounded-liquid shadow-liquid" style="max-width: 100%;">
            <%= image_tag('img/Affiche-reprise.jpg', 
                alt: 'Affiche reprise Grenoble Roller', 
                class: 'img-fluid rounded-liquid',
                style: 'max-height: 500px; width: auto; object-fit: contain;') %>
          </div>
        </div>
        
        <!-- Texte droite -->
        <div class="col-12 col-lg-4 col-xl-5">
          <div class="element-content text-center text-lg-start">
            <span class="element-badge badge badge-liquid-success mb-3">
              <i class="bi bi-people me-1"></i>
              Rejoignez-nous
            </span>
            <h2 class="element-title mb-3">
              Plus de 500 riders actifs
            </h2>
            <p class="element-text mb-4">
              Découvrez Grenoble autrement avec nos sorties régulières, 
              événements et randonnées pour tous les niveaux
            </p>
            <a href="#adhesion" class="btn btn-liquid-primary btn-lg">
              <i class="bi bi-person-plus me-2"></i>
              Adhérer maintenant
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- ========================================
     SECTION VIDÉO : TEASER RENTRÉE 2025
     ======================================== -->
<section>
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="display-4 fw-bold mb-3">
          <i class="bi bi-play-circle text-liquid-primary me-3"></i>
          Découvrez nos sorties
        </h2>
        <hr class="w-50 mx-auto">
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-8">
        <div class="card card-liquid rounded-liquid shadow-liquid p-3">
          <div class="ratio ratio-16x9">
            <video 
              class="rounded-liquid" 
              controls 
              poster="<%= image_path('logo/logo_grenobleroller_color.png') %>"
              preload="metadata">
              <source src="/video/Teaser_Rentree_Rando_Roller_2025.mp4" type="video/mp4">
              Votre navigateur ne supporte pas la lecture de vidéos HTML5.
            </video>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ========================================
     SECTION 1 : VALEURS
     Alternating image/text sections
     ======================================== -->
<section class="py-5">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12 text-center">
        <h2 class="display-4 fw-bold mb-3">
          <i class="bi bi-star text-liquid-primary me-3"></i>
          Nos valeurs
        </h2>
        <p class="lead text-muted">
          Ce qui nous guide au quotidien
        </p>
        <hr class="w-50 mx-auto">
      </div>
    </div>

    <!-- Valeur 1 : Solidarité - Image Left -->
    <div class="element-presentation mb-5">
      <div class="row align-items-center g-4">
        <div class="col-lg-6">
          <div class="element-image rounded-liquid shadow-liquid">
            <%= image_tag('img/roller.png', 
                alt: 'Solidarité et entraide', 
                class: 'img-fluid rounded-liquid',
                loading: 'lazy') %>
          </div>
        </div>
        <div class="col-lg-6">
