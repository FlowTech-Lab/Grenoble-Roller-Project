<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12 text-center">
      <div class="mb-3">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
      </div>
      <h1 class="display-5 text-liquid-primary-white mb-2">
        Commande confirmée !
      </h1>
      <p class="text-muted">Merci pour votre commande</p>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <!-- Order info card -->
      <div class="card card-liquid rounded-liquid shadow-liquid mb-4">
        <div class="card-body p-4">
          <h3 class="h5 text-liquid-primary mb-4">
            <i class="bi bi-receipt me-2"></i>Détails de la commande
          </h3>
          
          <div class="row g-3">
            <div class="col-md-6">
              <div class="d-flex align-items-center gap-2 mb-2">
                <i class="bi bi-hash text-muted"></i>
                <span class="text-muted">Numéro de commande:</span>
              </div>
              <p class="fs-5 fw-bold text-liquid-primary mb-0">#<%= @order.id %></p>
            </div>
            
            <div class="col-md-6">
              <div class="d-flex align-items-center gap-2 mb-2">
                <i class="bi bi-calendar text-muted"></i>
                <span class="text-muted">Date:</span>
              </div>
              <p class="fs-6 mb-0"><%= @order.created_at.strftime("%d/%m/%Y à %H:%M") %></p>
            </div>
            
            <div class="col-md-6">
              <div class="d-flex align-items-center gap-2 mb-2">
                <i class="bi bi-info-circle text-muted"></i>
                <span class="text-muted">Statut:</span>
              </div>
              <span class="badge badge-liquid-primary fs-6"><%= @order.status %></span>
            </div>
            
            <div class="col-md-6">
              <div class="d-flex align-items-center gap-2 mb-2">
                <i class="bi bi-currency-euro text-muted"></i>
                <span class="text-muted">Total:</span>
              </div>
              <p class="fs-5 fw-bold text-liquid-primary mb-0"><%= format_price(@order.total_cents) %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Order items -->
      <div class="card card-liquid rounded-liquid shadow-liquid mb-4">
        <div class="card-body p-4">
          <h3 class="h5 text-liquid-primary mb-4">
            <i class="bi bi-list-ul me-2"></i>Articles commandés
          </h3>
          
          <div class="mb-4">
            <% @order.order_items.each do |item| %>
              <div class="cart-item">
                <div class="cart-item-image">
                  <%= image_tag item.variant.product.image_url, alt: item.variant.product.name, loading: "lazy" %>
                </div>
                
                <div class="cart-item-content">
                  <div class="cart-item-info">
                    <p class="cart-item-title mb-1"><%= item.variant.product.name %></p>
                    <div class="d-flex align-items-center gap-2">
                      <p class="small text-muted mb-0"><%= item.variant.sku %></p>
                      <span class="small text-muted">•</span>
                      <p class="small text-muted mb-0"><%= format_price(item.unit_price_cents) %> / u</p>
                    </div>
                  </div>
                  
                  <div class="cart-item-qty">
                    <span class="badge badge-liquid-primary">Qté: <%= item.quantity %></span>
                  </div>
                  
                  <div class="cart-item-price">
                    <div class="text-end">
                      <strong><%= format_price(item.unit_price_cents * item.quantity) %></strong>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Order total summary -->
          <div class="border-top pt-3">
            <div class="d-flex justify-content-end">
              <div class="text-end">
                <div class="small text-muted mb-1">Sous-total: <%= format_price(@order.order_items.sum { |item| item.unit_price_cents * item.quantity }) %></div>
                <strong class="fs-5">Total: <%= format_price(@order.total_cents) %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action buttons -->
      <div class="d-flex gap-2 justify-content-center">
        <%= link_to shop_path, class: "btn btn-liquid-primary" do %>
          <i class="bi bi-bag me-2"></i>Continuer mes achats
        <% end %>
        <%= link_to orders_path, class: "btn btn-outline-primary" do %>
          <i class="bi bi-list-ul me-2"></i>Voir mes commandes
        <% end %>
      </div>
    </div>
  </div>
</div>
