<div class="container">
  <h1 class="mb-4"><i class="bi bi-check2-circle me-2"></i>Confirmation de commande</h1>
  <div class="card card-liquid mb-3">
    <div class="card-body">
      <p class="mb-1">Numéro de commande: <strong>#<%= @order.id %></strong></p>
      <p class="mb-1">Statut: <span class="badge badge-liquid-primary"><%= @order.status %></span></p>
      <p class="mb-0">Total: <strong><%= number_to_currency(@order.total_cents / 100.0, unit: "€") %></strong></p>
    </div>
  </div>

  <h5>Articles</h5>
  <div class="table-responsive">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>Produit</th>
          <th>Variante (SKU)</th>
          <th class="text-center">Qté</th>
          <th class="text-end">Prix Unitaire</th>
          <th class="text-end">Sous-total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |item| %>
          <tr>
            <td><%= item.variant.product.name %></td>
            <td><%= item.variant.sku %></td>
            <td class="text-center"><%= item.quantity %></td>
            <td class="text-end"><%= number_to_currency(item.unit_price_cents / 100.0, unit: "€") %></td>
            <td class="text-end"><%= number_to_currency((item.unit_price_cents * item.quantity) / 100.0, unit: "€") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Retour à la boutique", shop_path, class: "btn btn-outline-primary" %>
  </div>
</div>


