<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">
      <i class="bi bi-bag me-2"></i>Boutique
    </h1>
  </div>

  <% if @categories.any? %>
    <div class="mb-3">
      <div class="d-flex flex-wrap gap-2">
        <% @categories.each do |cat| %>
          <span class="badge badge-liquid-primary"><%= cat.name %></span>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="row g-4">
    <% @products.each do |product| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="card card-liquid h-100">
          <% if product.image_url.present? %>
            <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" loading="lazy">
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1"><%= product.name %></h5>
            <p class="text-muted mb-3"><%= product.category&.name %></p>
            <p class="fw-bold mb-4"><%= number_to_currency(product.price_cents.to_i / 100.0, unit: "â‚¬") %></p>
            <div class="mt-auto">
              <%= link_to "Voir le produit", product_path(product.slug.presence || product), class: "btn btn-liquid-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


