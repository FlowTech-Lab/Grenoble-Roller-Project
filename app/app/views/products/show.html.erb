<div class="container">
  <div class="row g-4">
    <div class="col-12 col-lg-6">
      <% if @product.image_url.present? %>
        <img src="<%= @product.image_url %>" class="img-fluid rounded shadow-liquid" alt="<%= @product.name %>">
      <% end %>
    </div>
    <div class="col-12 col-lg-6">
      <h1 class="mb-1"><%= @product.name %></h1>
      <p class="text-muted mb-3"><%= @product.category&.name %></p>
      <p class="lead fw-bold"><%= number_to_currency(@product.price_cents.to_i / 100.0, unit: "â‚¬") %></p>
      <div class="mb-4">
        <%= simple_format(@product.description) %>
      </div>

      <% if @variants.any? %>
        <div class="mb-3">
          <label class="form-label">Variants</label>
          <select id="variant_id" class="form-select form-control-liquid">
            <% @variants.each do |v| %>
              <option value="<%= v.id %>"><%= v.sku %> - <%= number_to_currency(v.price_cents.to_i / 100.0, unit: "â‚¬") %></option>
            <% end %>
          </select>
        </div>
      <% end %>

      <div class="d-flex gap-2">
        <%= form_with url: add_item_cart_path, method: :post, class: "d-flex gap-2" do |f| %>
          <%= hidden_field_tag :variant_id, @variants.first&.id %>
          <%= number_field_tag :quantity, 1, min: 1, class: "form-control", style: "max-width: 100px;" %>
          <button class="btn btn-liquid-primary" type="submit">
            <i class="bi bi-cart-plus me-2"></i>Ajouter au panier
          </button>
        <% end %>
        <%= link_to "Voir le panier", cart_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>


