<div class="container">
  <div class="row g-4">
    <div class="col-12 col-lg-6">
      <% if @product.image_url.present? %>
        <%= image_tag @product.image_url, class: "img-fluid rounded shadow-liquid", alt: @product.name %>
      <% end %>
    </div>
    <div class="col-12 col-lg-6">
      <h1 class="mb-1"><%= @product.name %></h1>
      <p class="text-muted mb-3"><%= @product.category&.name %></p>
      <p class="lead fw-bold"><%= number_to_currency(@product.price_cents.to_i / 100.0, unit: "€") %></p>
      <div class="mb-4">
        <%= simple_format(@product.description) %>
      </div>

      <% if @variants.any? %>
        <div class="mb-3">
          <label class="form-label">Sélectionner une variante</label>
          <select id="variant_id" name="variant_id" class="form-select form-control-liquid">
            <% @variants.each do |v| %>
              <% 
                size_opt = v.option_values.find { |ov| ov.option_type.name == 'size' }
                color_opt = v.option_values.find { |ov| ov.option_type.name == 'color' }
                variant_label = [size_opt&.presentation, color_opt&.presentation].compact.join(' - ')
                variant_label = v.sku if variant_label.blank?
              %>
              <option value="<%= v.id %>" data-image="<%= @product.image_url %>">
                <%= variant_label %> - <%= number_to_currency(v.price_cents.to_i / 100.0, unit: "€") %>
              </option>
            <% end %>
          </select>
        </div>
      <% end %>

      <div class="d-flex gap-2">
        <%= form_with url: add_item_cart_path, method: :post, class: "d-flex gap-2", id: "add-to-cart-form" do |f| %>
          <%= hidden_field_tag :variant_id, @variants.first&.id, id: "selected_variant_id" %>
          <%= number_field_tag :quantity, 1, min: 1, class: "form-control", style: "max-width: 100px;" %>
          <button class="btn btn-liquid-primary" type="submit">
            <i class="bi bi-cart-plus me-2"></i>Ajouter au panier
          </button>
        <% end %>
        <%= link_to "Voir le panier", cart_path, class: "btn btn-outline-primary" %>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', function() {
          const variantSelect = document.getElementById('variant_id');
          const selectedVariantInput = document.getElementById('selected_variant_id');
          
          if (variantSelect && selectedVariantInput) {
            variantSelect.addEventListener('change', function() {
              selectedVariantInput.value = this.value;
            });
          }
        });
      </script>
    </div>
  </div>
</div>


