<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="mb-3">
                            <%= f.label :email, class: "form-label" %>
                            <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "votre@email.com" %>
                            </div>
                        </div>
                        <div class="mb-3">
                            <%= f.label :password, "Mot de passe", class: "form-label" %>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
                            </div>
                        </div>
                        <% if devise_mapping.rememberable? %>
                            <div class="mb-3 form-check">
                                <%= f.check_box :remember_me, class: "form-check-input" %>
                                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
                            </div>
                        <% end %>
                        <div class="d-grid mb-3">
                            <%= f.submit "Se connecter", class: "btn btn-liquid-primary btn-lg" %>
                        </div>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>