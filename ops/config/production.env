# Configuration Production
# Ce fichier est chargé automatiquement par deploy.sh

# Environnement
ENV=production
BRANCH=main
PORT=3002
CONTAINER_NAME=grenoble-roller-production
DB_CONTAINER=grenoble-roller-db-production
DB_NAME=grenoble_roller_production

# Docker Compose
COMPOSE_FILE=ops/production/docker-compose.yml
BLUE_GREEN_COMPOSE_FILE=ops/production/docker-compose.blue-green.yml

# Chemins
BACKUP_DIR=backups/production
LOG_FILE=logs/deploy-production.log
LOG_JSON_FILE=logs/deploy-production.json

# Options
ROLLBACK_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true
BLUE_GREEN_ENABLED=false
PROMETHEUS_PUSHGATEWAY=

# Timeouts (en secondes) - Plus longs en production
MIGRATION_BASE_TIMEOUT=120
MIGRATION_PER_MIGRATION=60
MIGRATION_MAX_TIMEOUT=1800
MIGRATION_MAX_TIMEOUT_PRODUCTION=3600
HEALTH_CHECK_MAX_RETRIES=120
HEALTH_CHECK_BACKOFF_MAX=15
HEALTH_CHECK_INITIAL_SLEEP=15
CONTAINER_RUNNING_WAIT=120
CONTAINER_HEALTHY_WAIT=180
CONTAINER_NEW_WAIT=180

# Espace disque (en GB) - Plus d'espace requis en production
DISK_SPACE_REQUIRED=10
DISK_SPACE_MIN_AFTER_CLEANUP=5

# Backup - Plus de rétention en production
BACKUP_RETENTION_COUNT=50

