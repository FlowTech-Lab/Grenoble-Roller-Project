# Configuration Staging
# Ce fichier est charg√© automatiquement par deploy.sh

# Environnement
ENV=staging
BRANCH=staging
PORT=3001
CONTAINER_NAME=grenoble-roller-staging
DB_CONTAINER=grenoble-roller-db-staging
DB_NAME=grenoble_roller_production

# Docker Compose
COMPOSE_FILE=ops/staging/docker-compose.yml
BLUE_GREEN_COMPOSE_FILE=ops/staging/docker-compose.blue-green.yml

# Chemins
BACKUP_DIR=backups/staging
LOG_FILE=logs/deploy-staging.log
LOG_JSON_FILE=logs/deploy-staging.json

# Options
ROLLBACK_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true
BLUE_GREEN_ENABLED=false
PROMETHEUS_PUSHGATEWAY=

# Timeouts (en secondes)
MIGRATION_BASE_TIMEOUT=60
MIGRATION_PER_MIGRATION=30
MIGRATION_MAX_TIMEOUT=900
MIGRATION_MAX_TIMEOUT_PRODUCTION=1800
HEALTH_CHECK_MAX_RETRIES=60
HEALTH_CHECK_BACKOFF_MAX=10
HEALTH_CHECK_INITIAL_SLEEP=10
CONTAINER_RUNNING_WAIT=60
CONTAINER_HEALTHY_WAIT=120
CONTAINER_NEW_WAIT=120

# Espace disque (en GB)
DISK_SPACE_REQUIRED=5
DISK_SPACE_MIN_AFTER_CLEANUP=3

# Backup
BACKUP_RETENTION_COUNT=20

